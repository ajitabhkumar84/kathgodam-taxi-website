---
import RouteCard from './RouteCard.astro';

interface Package {
  name: string;
  slug: string;
  subtitle?: string;
  price: string;
  duration?: string;
  image: string;
}

interface Props {
  packages?: Package[];
  sectionTitle?: string;
  sectionDescription?: string;
}

const {
  packages = [],
  sectionTitle = 'Customized Tour Packages',
  sectionDescription = 'Multi-day tours designed for complete relaxation and exploration. All packages include accommodation, meals, and sightseeing.'
} = Astro.props;
---

<section class="py-10 bg-white" id="tours">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center bg-primary-100 text-primary-900 px-4 py-2 rounded-full mb-4 font-semibold text-sm">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
          <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
        </svg>
        Tour Packages
      </div>
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        {sectionTitle.includes('Tour Packages') ? (
          <Fragment set:html={sectionTitle.replace('Tour Packages', '<span class="text-primary-600">Tour Packages</span>')} />
        ) : (
          sectionTitle
        )}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {sectionDescription}
      </p>
    </div>

    <!-- Tour Packages Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {packages.map((pkg) => (
        <RouteCard
          from="Kathgodam"
          to={pkg.name}
          distance={pkg.duration || 'Multi-day'}
          duration={pkg.duration || ''}
          price={pkg.price}
          description={pkg.subtitle || ''}
          image={pkg.image}
          href={`/${pkg.slug}`}
        />
      ))}
    </div>
  </div>
</section>
