---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import WhatsAppFAB from '../components/WhatsAppFAB.astro';
import { getSiteSettings } from '../lib/sanity';
import '../styles/global.css';

const siteSettings = await getSiteSettings();
const whatsappNumber = siteSettings?.whatsappNumber || '917351721351';
const whatsappMessage = 'Hi, I need help finding a page on your website.';
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Page not found - Kathgodam Taxi" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>404 - Page Not Found | Kathgodam Taxi</title>
  </head>
  <body class="antialiased">
    <Navbar />

    <main class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center">
          <!-- 404 Illustration -->
          <div class="mb-8">
            <svg class="mx-auto h-64 w-64 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="0.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>

          <!-- Error Message -->
          <h1 class="text-6xl font-bold text-black mb-4">404</h1>
          <h2 class="text-3xl font-bold text-gray-800 mb-4">Oops! Page Not Found</h2>
          <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
            The page you're looking for seems to have taken a wrong turn. Let's get you back on track!
          </p>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
            <a
              href="/"
              class="inline-flex items-center justify-center bg-primary-500 text-black px-8 py-3 rounded-lg font-bold hover:bg-primary-400 transition-colors shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Go to Homepage
            </a>
            <a
              href="/contact"
              class="inline-flex items-center justify-center bg-white text-black border-2 border-gray-300 px-8 py-3 rounded-lg font-bold hover:bg-gray-100 transition-colors shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Contact Us
            </a>
            <a
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center bg-whatsapp text-white px-8 py-3 rounded-lg font-bold hover:bg-green-600 transition-colors shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Get Help on WhatsApp
            </a>
          </div>

          <!-- Popular Links -->
          <div class="max-w-4xl mx-auto">
            <h3 class="text-2xl font-bold text-gray-800 mb-6">Popular Routes & Services</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
                <h4 class="font-bold text-lg mb-3 text-gray-800">Popular Routes</h4>
                <ul class="space-y-2 text-left">
                  <li><a href="/kathgodam-nainital" class="text-primary-600 hover:text-primary-500">Kathgodam to Nainital</a></li>
                  <li><a href="/kathgodam-bhimtal" class="text-primary-600 hover:text-primary-500">Kathgodam to Bhimtal</a></li>
                  <li><a href="/kathgodam-ranikhet" class="text-primary-600 hover:text-primary-500">Kathgodam to Ranikhet</a></li>
                  <li><a href="/rates" class="text-primary-600 hover:text-primary-500">View All Rates</a></li>
                </ul>
              </div>
              <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
                <h4 class="font-bold text-lg mb-3 text-gray-800">Tour Packages</h4>
                <ul class="space-y-2 text-left">
                  <li><a href="/packages" class="text-primary-600 hover:text-primary-500">View All Packages</a></li>
                  <li><a href="/temples" class="text-primary-600 hover:text-primary-500">Temple Tours</a></li>
                  <li><a href="/book" class="text-primary-600 hover:text-primary-500">Book a Taxi</a></li>
                </ul>
              </div>
              <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
                <h4 class="font-bold text-lg mb-3 text-gray-800">Quick Links</h4>
                <ul class="space-y-2 text-left">
                  <li><a href="/contact" class="text-primary-600 hover:text-primary-500">Contact Us</a></li>
                  <li><a href="/my-bookings" class="text-primary-600 hover:text-primary-500">My Bookings</a></li>
                  <li><a href="/" class="text-primary-600 hover:text-primary-500">Homepage</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <Footer />

    <!-- WhatsApp FAB -->
    <WhatsAppFAB />

    <style>
      /* Add spacing for fixed navbar */
      main {
        margin-top: 64px;
      }

      @media (min-width: 768px) {
        main {
          margin-top: 80px;
        }
      }
    </style>
  </body>
</html>
