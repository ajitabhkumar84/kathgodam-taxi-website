---
import TestimonialCard from './TestimonialCard.astro';

interface Testimonial {
  name: string;
  location: string;
  rating: number;
  quote: string;
}

interface Props {
  testimonials?: Testimonial[];
  sectionTitle?: string;
  sectionDescription?: string;
  footerText?: string;
}

const {
  testimonials = [],
  sectionTitle = 'What Our Guests Say',
  sectionDescription = "Don't just take our word for it. Hear from our happy customers who have experienced the Kumaon hills with us.",
  footerText = '4.9/5 Average Rating from 500+ Reviews'
} = Astro.props;
---

<section class="py-10 bg-white" id="reviews">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-8">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        {sectionTitle}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        {sectionDescription}
      </p>
    </div>

    <!-- Horizontal Scrollable Testimonials -->
    <div class="relative">
      <div class="overflow-x-auto horizontal-scroll pb-4" style="scroll-snap-type: x mandatory;">
        <div class="flex gap-6" style="width: max-content;">
          {testimonials.map((testimonial) => (
            <div style="scroll-snap-align: start; min-width: 340px; max-width: 340px;">
              <TestimonialCard
                name={testimonial.name}
                location={testimonial.location}
                rating={testimonial.rating}
                quote={testimonial.quote}
              />
            </div>
          ))}
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="mt-4 text-center text-sm text-gray-500">
        <svg class="w-5 h-5 inline-block mr-1 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
        </svg>
        Swipe to see more reviews
      </div>
    </div>

    <!-- Trust Badge -->
    <div class="mt-8 text-center">
      <div class="inline-flex items-center bg-primary-50 px-6 py-3 rounded-full">
        <svg class="w-6 h-6 text-primary-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        <span class="text-primary-900 font-semibold">{footerText}</span>
      </div>
    </div>
  </div>
</section>
