# Sanity CMS Configuration
# Get these values from https://www.sanity.io/manage
PUBLIC_SANITY_PROJECT_ID=your_project_id_here
PUBLIC_SANITY_DATASET=production
PUBLIC_SANITY_API_VERSION=2024-01-01

# Required for migration scripts and write operations
# Get a token with Editor permissions from: https://www.sanity.io/manage
SANITY_API_TOKEN=your_write_token_here

# Sanity Preview Mode Secret (for draft content preview)
SANITY_PREVIEW_SECRET=your_random_secret_here

# Admin Authentication
# IMPORTANT: Use a strong password (minimum 16 characters, mix of letters, numbers, symbols)
ADMIN_PASSWORD=change_this_to_strong_password

# Session Secret (used to sign admin session cookies)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change_this_to_random_64_char_hex_string

# Email Service (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Email Configuration
# IMPORTANT: Use your verified domain from Resend (e.g., mail.kathgodamtaxi.in)
FROM_EMAIL=noreply@mail.kathgodamtaxi.in
ADMIN_EMAIL=kathgodamtaxi@gmail.com
