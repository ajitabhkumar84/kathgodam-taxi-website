---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import PreviewBanner from '../components/PreviewBanner.astro'
import PackagesHero from '../components/PackagesHero.astro'
import CategoryJumpNav from '../components/CategoryJumpNav.astro'
import PackageFilterBar from '../components/PackageFilterBar.astro'
import PackageCategorySection from '../components/PackageCategorySection.astro'
import {getPackagesPage, getSiteSettings, urlFor} from '../lib/sanity'
import '../styles/global.css'

// Mark as server-rendered for preview support
export const prerender = true

// Prerendered pages always show published content (no preview mode)
const isPreview = false

// Fetch packages page data
const packagesPage = await getPackagesPage(isPreview)
const siteSettings = await getSiteSettings()

// Fallback if no data
if (!packagesPage) {
  return Astro.redirect('/404')
}

// Process data for components
const pageTitle = packagesPage.pageTitle || 'Tour Packages'
const metaDescription = packagesPage.metaDescription || 'Explore our tour packages'
const keywords = packagesPage.keywords || ''

const heroBackgroundImage = packagesPage.heroImage
  ? urlFor(packagesPage.heroImage).width(1920).height(600).url()
  : undefined

// Transform package categories and their packages
const categories =
  packagesPage.packageCategories?.map((category: any) => ({
    categoryName: category.categoryName,
    categorySlug: category.categorySlug,
    categoryDescription: category.categoryDescription,
    icon: category.icon,
    packages:
      category.packages?.map((pkg: any) => ({
        name: pkg.name,
        slug: pkg.slug,
        subtitle: pkg.subtitle,
        duration: pkg.duration,
        price: pkg.startingPrice,
        highlights: pkg.highlights?.slice(0, 3) || [],
        image: pkg.featuredHomepageImage
          ? urlFor(pkg.featuredHomepageImage).width(800).height(600).url()
          : pkg.heroSlides?.[0]?.image
            ? urlFor(pkg.heroSlides[0].image).width(800).height(600).url()
            : '/images/default-package.jpg',
      })) || [],
  })) || []

// Get WhatsApp details for CTAs
const whatsappNumber = siteSettings?.whatsappNumber || '917351721351'
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent('Hi, I need a custom tour package.')}`
const phoneNumber = siteSettings?.phone || '7351721351'
const canonicalUrl = new URL(Astro.url.pathname.replace(/\/$/, '') + '/', Astro.site).href
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={metaDescription} />
    {keywords && <meta name="keywords" content={keywords} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalUrl} />
    <title>{pageTitle}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>

  <body class="antialiased">
    <!-- Preview Banner -->
    <PreviewBanner show={isPreview} />

    <!-- Navbar -->
    <Navbar />

    <!-- Main Content -->
    <main>
      <!-- Hero Section -->
      <PackagesHero
        title={packagesPage.heroTitle}
        subtitle={packagesPage.heroSubtitle}
        badge={packagesPage.heroBadge}
        backgroundImage={heroBackgroundImage}
      />

      <!-- Introduction -->
      {packagesPage.introText && (
        <section class="py-8 bg-white border-b border-gray-200">
          <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <p class="text-lg text-gray-700 leading-relaxed">
              {packagesPage.introText}
            </p>
          </div>
        </section>
      )}

      <!-- Filter Bar -->
      {packagesPage.showFilters && (
        <PackageFilterBar
          showDurationFilter={packagesPage.filterByDurationEnabled}
          showPriceFilter={packagesPage.filterByPriceEnabled}
        />
      )}

      <!-- Category Jump Navigation -->
      {packagesPage.showCategoryNav && categories.length > 1 && (
        <CategoryJumpNav
          categories={categories.map((c: any) => ({
            categoryName: c.categoryName,
            categorySlug: c.categorySlug,
            icon: c.icon,
          }))}
          title={packagesPage.categoryNavTitle}
        />
      )}

      <!-- Package Category Sections -->
      {categories.map((category: any, index: number) => (
        <PackageCategorySection
          categoryName={category.categoryName}
          categorySlug={category.categorySlug}
          categoryDescription={category.categoryDescription}
          packages={category.packages}
          isFirst={index === 0}
        />
      ))}

      <!-- Additional Information Section -->
      {packagesPage.showAdditionalInfo && packagesPage.additionalInfoPoints && (
        <section class="py-12 bg-gray-50">
          <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">
              {packagesPage.additionalInfoTitle || 'What You Need to Know'}
            </h2>
            <ul class="space-y-3">
              {packagesPage.additionalInfoPoints.map((point: string) => (
                <li class="flex items-start gap-3">
                  <svg
                    class="w-6 h-6 text-primary-500 flex-shrink-0 mt-0.5"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-gray-700">{point}</span>
                </li>
              ))}
            </ul>
          </div>
        </section>
      )}

      <!-- Bottom CTA Section -->
      <section
        class="py-12 bg-gradient-to-r from-secondary-900 via-black to-secondary-900 text-white"
      >
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            {packagesPage.bottomCtaHeading || 'Need a Custom Package?'}
          </h2>
          <p class="text-xl text-gray-300 mb-8">
            {packagesPage.bottomCtaText || 'Contact us for a custom package.'}
          </p>
          <div class="flex flex-col sm:flex-row gap-3 justify-center">
            <a
              href="/contact"
              class="inline-flex items-center justify-center bg-primary-500 text-black px-8 py-3 rounded-lg font-bold hover:bg-primary-400 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
            >
              Submit Query
              <svg
                class="w-5 h-5 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
            <a
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center bg-white text-black px-8 py-3 rounded-lg font-bold hover:bg-gray-100 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
            >
              WhatsApp Us
              <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                ></path>
              </svg>
            </a>
            <a
              href={`tel:+91${phoneNumber}`}
              class="inline-flex items-center justify-center bg-secondary-700 text-white px-8 py-3 rounded-lg font-bold hover:bg-secondary-600 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              Call Now
            </a>
          </div>
        </div>
      </section>

      <!-- FAQs Section -->
      {packagesPage.faqs && packagesPage.faqs.length > 0 && (
        <section class="py-12 bg-white">
          <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
              Frequently Asked Questions
            </h2>
            <div class="space-y-4">
              {packagesPage.faqs.map((faq: any) => (
                <details class="bg-gray-50 rounded-lg p-6 group">
                  <summary class="font-bold text-gray-900 cursor-pointer list-none flex items-center justify-between">
                    <span>{faq.question}</span>
                    <svg
                      class="w-5 h-5 text-primary-500 group-open:rotate-180 transition-transform"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 9l-7 7-7-7"
                      />
                    </svg>
                  </summary>
                  <div
                    class="mt-4 text-gray-700 prose"
                    set:html={faq.answer}
                  />
                </details>
              ))}
            </div>
          </div>
        </section>
      )}
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Floating WhatsApp Button -->
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-6 right-6 z-50 bg-[#25d366] text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg hover:shadow-2xl hover:scale-110 transition-all duration-300 animate-pulse-slow"
      aria-label="Chat on WhatsApp"
    >
      <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
        ></path>
      </svg>
    </a>

    <style>
      html {
        scroll-behavior: smooth;
      }

      main {
        margin-top: 64px;
      }

      @media (min-width: 768px) {
        main {
          margin-top: 80px;
        }
      }

      @keyframes pulse-slow {
        0%,
        100% {
          transform: scale(1);
          opacity: 1;
        }
        50% {
          transform: scale(1.05);
          opacity: 0.9;
        }
      }

      .animate-pulse-slow {
        animation: pulse-slow 2s ease-in-out infinite;
      }
    </style>
  </body>
</html>
