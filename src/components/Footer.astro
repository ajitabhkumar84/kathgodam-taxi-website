---
import { getSiteSettings, getFooter } from '../lib/sanity';

// Fetch data from Sanity
const siteSettings = await getSiteSettings();
const footerConfig = await getFooter();

// Fallback to defaults if Sanity data not available
const logoText = siteSettings?.logoText || 'Kathgodam';
const logoHighlight = siteSettings?.logoHighlight || 'Taxi';
const phoneNumber = siteSettings?.phone || '7351721351';
const whatsappNumber = siteSettings?.whatsappNumber || '917351721351';
const email = siteSettings?.email || 'kathgodamtaxi@gmail.com';
const whatsappMessage = siteSettings?.whatsappMessage || 'Hi, I would like to book a taxi from Kathgodam.';
const cancellationPolicy = siteSettings?.cancellationPolicy || 'Complete refund if done 5 days before arrival date. From 5 days to 24 hours before arrival, the advance would be adjusted for any future booking done with us. Less than 24 hours - no refund, but might adjust in future bookings in exceptional cases based on availability.';

const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;

const brandDescription = footerConfig?.brandDescription || 'Your trusted taxi partner for exploring the beautiful Kumaon hills. Safe drivers, transparent pricing, unforgettable trips.';

const navigation = footerConfig?.navigationLinks || [
  { label: 'Home', href: '/' },
  { label: 'Our Tours', href: '#tours' },
  { label: 'Our Fleet', href: '#fleet' },
  { label: 'Reviews', href: '#reviews' },
];

const services = footerConfig?.serviceLinks || [
  { label: 'Kathgodam to Nainital', href: '/kathgodam-nainital' },
  { label: 'Kainchi Dham Visit', href: '#' },
  { label: 'Mukteshwar Tour', href: '#' },
  { label: 'Airport Transfers', href: '#' },
];

const contactSectionTitle = footerConfig?.contactSectionTitle || 'Contact Us';
const submitQueryLabel = footerConfig?.submitQueryLabel || 'Submit Query';
const submitQueryLink = footerConfig?.submitQueryLink || '/contact';

const copyrightText = footerConfig?.copyrightText || '{year} Kathgodam Taxi. All rights reserved.';
const currentYear = new Date().getFullYear();
const displayCopyright = copyrightText.replace('{year}', currentYear.toString());
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">

      <!-- Brand & Description -->
      <div class="lg:col-span-1">
        <div class="text-2xl font-bold text-white mb-4">
          {logoText} <span class="text-primary-500">{logoHighlight}</span>
        </div>
        <p class="text-gray-400 text-sm leading-relaxed mb-4">
          {brandDescription}
        </p>
        <div class="flex space-x-4">
          <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-whatsapp transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-4">Navigation</h3>
        <ul class="space-y-2">
          {navigation.map((item: any) => (
            <li>
              <a href={item.href} class="text-gray-400 hover:text-primary-500 transition-colors text-sm">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Our Services -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-4">Our Services</h3>
        <ul class="space-y-2">
          {services.map((item: any) => (
            <li>
              <a href={item.href} class="text-gray-400 hover:text-primary-500 transition-colors text-sm">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Us -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-4">{contactSectionTitle}</h3>
        <ul class="space-y-3">
          <li>
            <a href={`tel:+91${phoneNumber}`} class="text-gray-400 hover:text-primary-500 transition-colors text-sm flex items-center space-x-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <span>+91 {phoneNumber}</span>
            </a>
          </li>
          <li>
            <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-whatsapp transition-colors text-sm flex items-center space-x-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              <span>WhatsApp</span>
            </a>
          </li>
          <li>
            <a href={`mailto:${email}`} class="text-gray-400 hover:text-primary-500 transition-colors text-sm flex items-center space-x-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span>{email}</span>
            </a>
          </li>
        </ul>
        <a
          href={submitQueryLink}
          class="mt-4 inline-flex items-center justify-center bg-primary-500 text-black px-6 py-2.5 rounded-lg font-bold text-sm hover:bg-primary-400 transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          {submitQueryLabel}
        </a>
      </div>
    </div>

    <!-- Cancellation Policy -->
    {cancellationPolicy && (
      <div class="mt-8 pt-8 border-t border-gray-800">
        <h3 class="text-white font-semibold text-lg mb-3 text-center">Cancellation Policy</h3>
        <p class="text-gray-400 text-sm leading-relaxed text-center max-w-3xl mx-auto">
          {cancellationPolicy}
        </p>
      </div>
    )}

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-sm text-gray-500">
      <p>&copy; {displayCopyright}</p>
    </div>
  </div>
</footer>
