---
import { urlFor } from '../lib/sanity';
import type { ItineraryDay } from '../types/package';

interface Props {
  itinerary: ItineraryDay[];
  title?: string;
  subtitle?: string;
}

const { itinerary, title = 'Day-Wise Itinerary', subtitle = 'Complete schedule and destinations covered' } = Astro.props;
---

{itinerary && Array.isArray(itinerary) && itinerary.length > 0 && (
  <section class="py-16 lg:py-20 bg-gradient-to-br from-orange-50 via-primary-50 to-orange-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {(title || 'Day-Wise Itinerary').split(' ').slice(0, -1).join(' ')} <span class="text-primary-600">{(title || 'Day-Wise Itinerary').split(' ').slice(-1)}</span>
        </h2>
        <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
          {subtitle || 'Complete schedule and destinations covered'}
        </p>
      </div>

      <div class="space-y-8">
        {itinerary.map((day, index) => {
          const imageUrl = day.image ? urlFor(day.image).width(800).height(600).url() : '';
          const isEven = index % 2 === 0;
          const hasBadge = day.badge && day.badge.trim().length > 0;

          return (
            <div class={`bg-white rounded-2xl shadow-xl overflow-hidden border-2 ${hasBadge ? 'border-primary-300' : 'border-primary-200'} hover:border-primary-400 transition-all relative`}>
              {/* Badge if present */}
              {hasBadge && (
                <div class="absolute top-4 right-4 z-10 bg-gradient-to-r from-primary-600 to-orange-600 text-white px-6 py-2 rounded-full text-sm font-bold shadow-xl">
                  ⭐ {day.badge}
                </div>
              )}

              <div class={`grid lg:grid-cols-2 gap-0 ${!isEven ? 'lg:grid-flow-dense' : ''}`}>
                {/* Image Side */}
                <div class={`relative h-64 lg:h-auto bg-gradient-to-br ${isEven ? 'from-primary-100 to-orange-100' : 'from-orange-100 to-primary-100'} ${!isEven ? 'lg:col-start-2' : ''}`}>
                  <div class="absolute inset-0 flex items-center justify-center">
                    {imageUrl ? (
                      <img
                        src={imageUrl}
                        alt={day.title}
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                    ) : (
                      <div class="text-gray-400">No image</div>
                    )}
                  </div>
                </div>

                {/* Content Side */}
                <div class={`p-8 bg-gradient-to-br ${isEven ? 'from-orange-50 to-white' : 'from-primary-50 to-orange-50'} ${!isEven ? 'lg:col-start-1 lg:row-start-1' : ''}`}>
                  <div class="flex items-start gap-4">
                    <div class="flex-shrink-0">
                      <div class={`w-16 h-16 bg-gradient-to-br ${isEven ? 'from-primary-500 to-orange-500' : 'from-orange-500 to-primary-600'} rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg`}>
                        {index + 1}
                      </div>
                    </div>
                    <div class="flex-1">
                      {/* Day Label */}
                      {day.day && (
                        <div class="text-sm font-semibold text-primary-600 mb-1 uppercase tracking-wide">
                          {day.day}
                        </div>
                      )}

                      {/* Title */}
                      <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">
                        {day.title}
                      </h3>

                      {/* Description */}
                      <p class="text-gray-700 mb-4 leading-relaxed">
                        {day.description}
                      </p>

                      {/* Route Information */}
                      {day.route && (
                        <div class={`flex items-center gap-2 text-sm text-primary-700 ${hasBadge ? 'bg-primary-100 border border-primary-300' : 'bg-primary-50'} px-4 py-2 rounded-lg inline-block mb-2`}>
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                          </svg>
                          <span class="font-semibold">Route:</span> {day.route}
                        </div>
                      )}

                      {/* Total Time */}
                      {day.totalTime && (
                        <div class="text-sm text-gray-600 font-semibold">
                          ⏱ Total Time: {day.totalTime}
                        </div>
                      )}

                      {/* Activities if present */}
                      {day.activities && Array.isArray(day.activities) && day.activities.length > 0 && (
                        <div class="mt-4">
                          <h4 class="text-sm font-bold text-gray-900 mb-2">Activities:</h4>
                          <ul class="space-y-1">
                            {day.activities.filter((activity) => activity !== null && activity !== undefined).map((activity) => (
                              <li class="flex items-start gap-2 text-sm text-gray-700">
                                <svg class="w-4 h-4 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                                <span>{activity}</span>
                              </li>
                            ))}
                          </ul>
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>
)}
