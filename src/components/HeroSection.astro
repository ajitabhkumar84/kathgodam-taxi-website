---
const whatsappNumber = "917351721351";
const phoneNumber = "7351721351";
const whatsappMessage = "Hi! I need a taxi from Kathgodam. Can you help me?";
---

<section class="hero-section relative h-screen min-h-[600px] flex items-center">
  <!-- Background with gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-r from-blue-900 via-blue-800 to-blue-600">
    <!-- Placeholder for hero image - will be added later -->
    <div class="absolute inset-0 bg-[url('/images/hero-kathgodam.jpg')] bg-cover bg-center opacity-30"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 py-8">
    <div class="max-w-4xl">
      <!-- Main Headline -->
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        Your Gateway to<br />
        <span class="text-orange-400">Kumaon Hills</span>
      </h1>

      <!-- Subheadline -->
      <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-2xl">
        Safe, Reliable & Affordable Taxi Services from Kathgodam Since 1991
      </p>

      <!-- Trust Badges -->
      <div class="flex flex-wrap gap-4 mb-10">
        <span class="bg-white/10 backdrop-blur-sm text-white px-4 py-2 rounded-full border border-white/20 text-sm md:text-base">
          ✓ 15+ Years Experience
        </span>
        <span class="bg-white/10 backdrop-blur-sm text-white px-4 py-2 rounded-full border border-white/20 text-sm md:text-base">
          ✓ 10,000+ Happy Customers
        </span>
        <span class="bg-white/10 backdrop-blur-sm text-white px-4 py-2 rounded-full border border-white/20 text-sm md:text-base">
          ✓ 24/7 Available
        </span>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4">
        <!-- WhatsApp Button (Primary) -->
        <a
          href={`https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="group inline-flex items-center justify-center gap-3 bg-green-500 hover:bg-green-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          <span>Book on WhatsApp</span>
        </a>

        <!-- Call Now Button -->
        <a
          href={`tel:+91${phoneNumber}`}
          class="group inline-flex items-center justify-center gap-3 bg-white hover:bg-gray-100 text-blue-900 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56a.977.977 0 0 0-1.01.24l-1.57 1.97c-2.83-1.35-5.48-3.9-6.89-6.83l1.95-1.66c.27-.28.35-.67.24-1.02-.37-1.11-.56-2.3-.56-3.53 0-.54-.45-.99-.99-.99H4.19C3.65 3 3 3.24 3 3.99 3 13.28 10.73 21 20.01 21c.71 0 .99-.63.99-1.18v-3.45c0-.54-.45-.99-.99-.99z"/>
          </svg>
          <span>Call Now: {phoneNumber}</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>
</section>

<style>
  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-bounce {
    animation: bounce 2s infinite;
  }
</style>
