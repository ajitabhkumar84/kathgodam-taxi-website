---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import PreviewBanner from '../components/PreviewBanner.astro'
import ContactHero from '../components/ContactHero.astro'
import ContactForm from '../components/ContactForm.astro'
import ContactFAQ from '../components/ContactFAQ.astro'
import {getSiteSettings} from '../lib/sanity'
import '../styles/global.css'

// Pre-render at build time for performance
export const prerender = true

// Prerendered pages always show published content (no preview mode)
const isPreview = false

// Fetch site settings
const siteSettings = await getSiteSettings()

// Page metadata
const pageTitle = 'Contact Us - Kathgodam Taxi Services'
const metaDescription =
  'Get in touch with Kathgodam Taxi for bookings, inquiries, and quotes. Available 24/7 via phone, WhatsApp, or email. Book your reliable taxi service in Kumaon Hills today.'
const keywords =
  'contact Kathgodam taxi, book taxi Kathgodam, Nainital taxi contact, Kumaon taxi booking, taxi inquiry, 24/7 taxi service'

// Contact details
const whatsappNumber = siteSettings?.whatsappNumber || '917351721351'
const phoneNumber = siteSettings?.phone || '7351721351'
const email = 'kathgodamtaxi@gmail.com'
const address =
  'A19- Near Kathgodam Railway Station, Nainital, Uttarakhand 263126'

// WhatsApp URL for floating button
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent('Hi, I would like to inquire about your taxi services.')}`

const canonicalUrl = new URL(Astro.url.pathname.replace(/\/$/, '') + '/', Astro.site).href

// Google Maps embed URL
const mapUrl = 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3480.5197678926456!2d79.54214307498057!3d29.26706465498476!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39a09a13e63b48a5%3A0xb77fbd4a785198ed!2sKathgodam%20Taxi%20Service!5e0!3m2!1sen!2sin!4v1767598150718!5m2!1sen!2sin'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={metaDescription} />
    <meta name="keywords" content={keywords} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalUrl} />
    <title>{pageTitle}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Structured Data for Local Business -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Kathgodam Taxi Services",
        "description": "Reliable taxi services in Kumaon Hills, Uttarakhand",
        "telephone": "+917351721351",
        "email": "kathgodamtaxi@gmail.com",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "A19- Near Kathgodam Railway Station",
          "addressLocality": "Nainital",
          "addressRegion": "Uttarakhand",
          "postalCode": "263126",
          "addressCountry": "IN"
        },
        "openingHours": "Mo-Su 00:00-23:59",
        "priceRange": "$$"
      }
    </script>
  </head>

  <body class="antialiased">
    <!-- Preview Banner -->
    <PreviewBanner show={isPreview} />

    <!-- Navbar -->
    <Navbar />

    <!-- Main Content -->
    <main>
      <!-- Hero Section -->
      <ContactHero
        title="Get in Touch"
        subtitle="Book your taxi or request a quote - we're here to help 24/7"
      />

      <!-- Form & Contact Cards Section -->
      <section class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left: Contact Form (2 columns) -->
            <div class="lg:col-span-2">
              <ContactForm
                formTitle="Request a Free Quote"
                formDescription="Fill out the form below and we'll get back to you within minutes"
              />
            </div>

            <!-- Right: Contact Cards (1 column) -->
            <div class="space-y-4">
              <div class="text-center mb-6">
                <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">
                  Contact Information
                </h2>
                <p class="text-gray-600">
                  Reach out to us anytime
                </p>
              </div>

              <!-- WhatsApp Card -->
              <a
                href={whatsappUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="block bg-white rounded-xl shadow-md p-6 hover:shadow-xl transition-all hover:-translate-y-1 border-2 border-transparent hover:border-whatsapp group"
              >
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div
                      class="w-12 h-12 bg-whatsapp rounded-full flex items-center justify-center group-hover:scale-110 transition-transform"
                    >
                      <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path
                          d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                        ></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <h3 class="text-lg font-bold text-gray-900 mb-1">WhatsApp</h3>
                    <p class="text-sm text-gray-600 mb-2">Chat instantly</p>
                    <p class="text-xl font-bold text-whatsapp">+91 {phoneNumber}</p>
                  </div>
                </div>
              </a>

              <!-- Phone Card -->
              <a
                href={`tel:+91${phoneNumber}`}
                class="block bg-white rounded-xl shadow-md p-6 hover:shadow-xl transition-all hover:-translate-y-1 border-2 border-transparent hover:border-primary-500 group"
              >
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div
                      class="w-12 h-12 bg-primary-500 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform"
                    >
                      <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        ></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <h3 class="text-lg font-bold text-gray-900 mb-1">Call Us</h3>
                    <p class="text-sm text-gray-600 mb-2">24/7 Available</p>
                    <p class="text-xl font-bold text-primary-600">+91 {phoneNumber}</p>
                  </div>
                </div>
              </a>

              <!-- Email Card -->
              <a
                href={`mailto:${email}`}
                class="block bg-white rounded-xl shadow-md p-6 hover:shadow-xl transition-all hover:-translate-y-1 border-2 border-transparent hover:border-secondary-900 group"
              >
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div
                      class="w-12 h-12 bg-secondary-900 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform"
                    >
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        ></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <h3 class="text-lg font-bold text-gray-900 mb-1">Email</h3>
                    <p class="text-sm text-gray-600 mb-2">Send us a message</p>
                    <p class="text-base font-bold text-secondary-900 break-all">{email}</p>
                  </div>
                </div>
              </a>

              <!-- Address Card -->
              <div class="bg-white rounded-xl shadow-md p-6 border-2 border-gray-100">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center">
                      <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        ></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                        ></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <h3 class="text-lg font-bold text-gray-900 mb-1">Office Address</h3>
                    <p class="text-sm text-gray-600 mb-2">Visit us for bookings</p>
                    <p class="text-sm text-gray-800 leading-relaxed">{address}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Find Us on Map Section -->
      <section class="py-12 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="bg-white rounded-xl shadow-lg overflow-hidden border-2 border-gray-100">
            <div class="p-4 bg-gradient-to-r from-primary-500 to-yellow-500">
              <h3 class="text-2xl font-bold text-black flex items-center justify-center">
                <svg class="w-7 h-7 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                  ></path>
                </svg>
                Find Us on Map
              </h3>
            </div>
            <div class="relative" style="height: 450px;">
              <iframe
                src={mapUrl}
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                class="absolute inset-0 w-full h-full"
              ></iframe>
            </div>
          </div>
        </div>
      </section>

      <!-- Operating Hours Section -->
      <section class="py-12 bg-gradient-to-r from-secondary-900 via-black to-secondary-900 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-8">Operating Hours</h2>
          <div class="flex flex-wrap justify-center gap-8 text-white">
            <div class="flex items-center">
              <svg class="w-8 h-8 text-primary-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-xl"><strong>24/7</strong> Available</span>
            </div>
            <div class="flex items-center">
              <svg class="w-8 h-8 text-primary-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-xl"><strong>365 Days</strong> a Year</span>
            </div>
            <div class="flex items-center">
              <svg class="w-8 h-8 text-primary-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-xl"><strong>Instant</strong> Booking</span>
            </div>
          </div>

          <!-- Trust Badges -->
          <div
            class="mt-12 flex flex-wrap justify-center gap-8 text-sm text-gray-400"
          >
            <div class="flex items-center">
              <svg
                class="w-5 h-5 text-primary-500 mr-2"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              15+ Years Experience
            </div>
            <div class="flex items-center">
              <svg
                class="w-5 h-5 text-primary-500 mr-2"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              Fixed Transparent Pricing
            </div>
            <div class="flex items-center">
              <svg
                class="w-5 h-5 text-primary-500 mr-2"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              1500+ Happy Families
            </div>
          </div>
        </div>
      </section>

      <!-- FAQs Section -->
      <ContactFAQ />
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Floating WhatsApp Button -->
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-6 right-6 z-50 bg-whatsapp text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg hover:shadow-2xl hover:scale-110 transition-all duration-300 animate-pulse-slow"
      aria-label="Chat on WhatsApp"
    >
      <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
        ></path>
      </svg>
    </a>

    <style>
      html {
        scroll-behavior: smooth;
      }

      main {
        margin-top: 64px;
      }

      @media (min-width: 768px) {
        main {
          margin-top: 80px;
        }
      }

      @keyframes pulse-slow {
        0%,
        100% {
          transform: scale(1);
          opacity: 1;
        }
        50% {
          transform: scale(1.05);
          opacity: 0.9;
        }
      }

      .animate-pulse-slow {
        animation: pulse-slow 2s ease-in-out infinite;
      }
    </style>
  </body>
</html>
