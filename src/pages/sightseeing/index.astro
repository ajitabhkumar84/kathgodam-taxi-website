---
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { getAllSightseeingTours, urlFor } from '../../lib/sanity';
import '../../styles/global.css';

const tours = await getAllSightseeingTours();

const pageTitle = 'Day Tours & Sightseeing Packages | Kathgodam Taxi';
const pageDescription = 'Explore Kumaon with our specially curated day tour packages. Visit Kainchi Dham, Nainital, Mukteshwar, and more with professional drivers and comfortable vehicles.';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription} />
  <meta name="keywords" content="day tours kumaon, sightseeing packages uttarakhand, kainchi dham tour, nainital day tour" />

  <!-- Open Graph -->
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:type" content="website" />

  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
</head>

<body class="antialiased">
  <Navbar />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-primary-500 via-primary-600 to-yellow-500 text-white overflow-hidden" style="min-height: 50vh;">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-black rounded-full blur-3xl"></div>
      </div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
        <div class="text-center max-w-3xl mx-auto">
          <div class="inline-flex items-center gap-2 bg-black/30 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-semibold mb-4">
            <svg class="w-5 h-5 text-primary-300" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            Curated Day Tours
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
            Explore Kumaon's
            <span class="text-secondary-900 block">Hidden Gems</span>
          </h1>

          <p class="text-lg md:text-xl text-white/90 mb-8 leading-relaxed">
            Discover the beauty of Uttarakhand with our carefully crafted day tour packages. From spiritual journeys to scenic hill stations, we've got the perfect tour for you.
          </p>

          <div class="flex flex-wrap gap-3 justify-center">
            <a
              href="#tours"
              class="inline-flex items-center gap-2 bg-secondary-900 text-primary-500 px-6 py-3 rounded-lg font-bold hover:bg-secondary-800 transition-all shadow-xl"
            >
              <span>Browse Tours</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </a>
            <a
              href="https://wa.me/917351721351?text=Hi%2C%20I%20want%20to%20inquire%20about%20day%20tours"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 bg-white text-secondary-900 px-6 py-3 rounded-lg font-bold hover:bg-gray-100 transition-all shadow-xl"
            >
              <svg class="w-5 h-5 text-[#25d366]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              <span>WhatsApp Us</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Tours Grid Section -->
    <section id="tours" class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Our <span class="text-primary-600">Day Tours</span>
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Choose from our collection of expertly designed day tours covering the best destinations in Kumaon
          </p>
        </div>

        {tours && tours.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {tours.map((tour) => (
              <a
                href={`/sightseeing/${tour.slug}`}
                class="group bg-white border-2 border-gray-200 hover:border-primary-500 rounded-xl overflow-hidden transition-all hover:shadow-2xl"
              >
                {/* Tour Image */}
                {tour.heroSlides?.[0]?.image && (
                  <div class="relative h-56 overflow-hidden">
                    <img
                      src={urlFor(tour.heroSlides[0].image).width(800).height(600).url()}
                      alt={tour.name}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                    <div class="absolute top-3 right-3 bg-primary-500 text-black px-3 py-1 rounded-full text-sm font-bold">
                      {tour.tourType}
                    </div>
                    <div class="absolute bottom-3 left-3 right-3">
                      <h3 class="text-xl font-bold text-white mb-1 group-hover:text-primary-300 transition-colors">
                        {tour.name}
                      </h3>
                    </div>
                  </div>
                )}

                {/* Tour Info */}
                <div class="p-5">
                  <div class="flex items-center gap-4 mb-3 text-sm text-gray-600">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span>{tour.duration}</span>
                    </div>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                      <span>{tour.distance}</span>
                    </div>
                  </div>

                  <p class="text-gray-700 text-sm mb-4 line-clamp-2">
                    {tour.overviewDescription}
                  </p>

                  <div class="flex justify-between items-center pt-3 border-t border-gray-200">
                    <div>
                      <div class="text-xs text-gray-500">Starting from</div>
                      <div class="text-xl font-bold text-primary-600">{tour.price}</div>
                    </div>
                    <div class="inline-flex items-center gap-1 text-primary-600 font-semibold group-hover:gap-2 transition-all">
                      <span>View Details</span>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="text-gray-500 text-lg">
              <p>No tours available at the moment.</p>
              <p class="text-sm mt-2">Check back soon for exciting day tour packages!</p>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- Why Book Day Tours Section -->
    <section class="py-16 bg-gradient-to-br from-gray-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Why Choose Our <span class="text-primary-600">Day Tours?</span>
          </h2>
          <p class="text-lg text-gray-600">
            Experience hassle-free sightseeing with our professional service
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white p-6 rounded-xl border-2 border-primary-200 text-center hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Fixed Pricing</h3>
            <p class="text-gray-600 text-sm">Transparent pricing with no hidden charges or surprises</p>
          </div>

          <div class="bg-white p-6 rounded-xl border-2 border-primary-200 text-center hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Expert Drivers</h3>
            <p class="text-gray-600 text-sm">Professional drivers with local knowledge and experience</p>
          </div>

          <div class="bg-white p-6 rounded-xl border-2 border-primary-200 text-center hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Flexible Timings</h3>
            <p class="text-gray-600 text-sm">Customizable pickup times to suit your schedule</p>
          </div>

          <div class="bg-white p-6 rounded-xl border-2 border-primary-200 text-center hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Clean Vehicles</h3>
            <p class="text-gray-600 text-sm">Well-maintained, sanitized cars for comfortable journeys</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-12 bg-gradient-to-r from-primary-500 via-yellow-500 to-primary-500">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-black mb-4">
          Ready to Explore Kumaon?
        </h2>
        <p class="text-lg text-black/80 mb-8 max-w-2xl mx-auto">
          Book your day tour now and create unforgettable memories in the beautiful hills of Uttarakhand.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://wa.me/917351721351?text=Hi%2C%20I%20want%20to%20book%20a%20day%20tour"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center bg-whatsapp text-white px-8 py-4 rounded-lg font-bold hover:bg-green-600 transition-all shadow-lg text-base"
          >
            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Book via WhatsApp
          </a>
          <a
            href="tel:+917351721351"
            class="inline-flex items-center justify-center bg-black text-white px-8 py-4 rounded-lg font-bold hover:bg-gray-900 transition-all shadow-lg text-base"
          >
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call: 7351721351
          </a>
        </div>
        <p class="mt-6 text-black/70 text-sm">
          ✓ Instant booking confirmation • ✓ 24/7 customer support • ✓ Best prices guaranteed
        </p>
      </div>
    </section>
  </main>

  <Footer />

  <style>
    html {
      scroll-behavior: smooth;
    }

    main {
      margin-top: 64px;
    }

    @media (min-width: 768px) {
      main {
        margin-top: 80px;
      }
    }

    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</body>
</html>
