---
import { getSiteSettings, getNavbar } from '../lib/sanity';

// Fetch data from Sanity
const siteSettings = await getSiteSettings();
const navbarConfig = await getNavbar();

// Fallback to defaults if Sanity data not available
const logoText = siteSettings?.logoText || 'Kathgodam';
const logoHighlight = siteSettings?.logoHighlight || 'Taxi';
const whatsappNumber = siteSettings?.whatsappNumber || '917351721351';
const whatsappMessage = siteSettings?.whatsappMessage || 'Hi, I would like to book a taxi from Kathgodam.';
const phoneNumber = siteSettings?.phone || '7351721351';

const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;

// Navigation links
const navLinks = navbarConfig?.navigationLinks || [
  { label: 'Home', href: '/' },
  { label: 'Pickup & Drop', href: '#routes' },
  { label: 'Car Rental for Tour', href: '/taxi-for-complete-tour' },
  { label: 'Tour Packages', href: '#tours' },
  { label: 'Temples in Kumaon', href: '#temples' },
  { label: 'Contact', href: '/contact' },
];

const bookNowLabel = navbarConfig?.bookNowLabel || 'Book Now';
const bookNowOptions = navbarConfig?.bookNowOptions || [
  { label: 'WhatsApp', sublabel: 'Instant booking', type: 'whatsapp' },
  { label: 'Call Now', sublabel: phoneNumber, type: 'phone' },
  { label: 'Submit Query', sublabel: 'Get custom quote', type: 'link', href: '/contact' },
];

const showSearch = navbarConfig?.showSearch !== false;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-secondary-900 shadow-lg border-b-4 border-primary-500">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3">
        <div class="bg-primary-500 p-2 rounded-lg">
          <svg class="w-6 h-6 md:w-8 md:h-8 text-black" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.85 7h10.29l1.08 3.11H5.77L6.85 7zM19 17H5v-5h14v5z"/>
            <circle cx="7.5" cy="14.5" r="1.5"/>
            <circle cx="16.5" cy="14.5" r="1.5"/>
          </svg>
        </div>
        <div class="text-xl md:text-2xl font-bold text-white">
          {logoText} <span class="text-primary-500">{logoHighlight}</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-6">
        {navLinks.map((link: any) => (
          <a
            href={link.href}
            class="text-gray-300 hover:text-primary-500 font-medium transition-colors text-sm"
          >
            {link.label}
          </a>
        ))}

        {showSearch && (
          <button
            id="search-button"
            class="text-gray-300 hover:text-primary-500 transition-colors p-2"
            aria-label="Search"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </button>
        )}

        <!-- Book Now Dropdown -->
        <div class="relative">
          <button
            id="book-now-dropdown-btn"
            class="bg-primary-500 text-black px-5 py-2 rounded-lg font-bold hover:bg-primary-400 transition-colors flex items-center space-x-2 text-sm"
          >
            <span>{bookNowLabel}</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>

          <!-- Dropdown Menu -->
          <div
            id="book-now-dropdown"
            class="hidden absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-xl border border-gray-200 overflow-hidden z-50"
          >
            {bookNowOptions.map((option: any, index: number) => {
              const isLast = index === bookNowOptions.length - 1;
              let href = '#';

              if (option.type === 'whatsapp') {
                href = whatsappUrl;
              } else if (option.type === 'phone') {
                href = `tel:+91${phoneNumber}`;
              } else if (option.type === 'link') {
                href = option.href || '/contact';
              }

              const colorClass = option.type === 'whatsapp' ? 'hover:bg-green-50' :
                                 option.type === 'phone' ? 'hover:bg-blue-50' :
                                 'hover:bg-yellow-50';

              const iconColor = option.type === 'whatsapp' ? 'text-whatsapp' :
                               option.type === 'phone' ? 'text-blue-600' :
                               'text-primary-600';

              return (
                <a
                  href={href}
                  target={option.type === 'whatsapp' ? '_blank' : undefined}
                  rel={option.type === 'whatsapp' ? 'noopener noreferrer' : undefined}
                  class={`flex items-center px-4 py-3 ${colorClass} transition-colors ${!isLast ? 'border-b border-gray-100' : ''}`}
                >
                  {option.type === 'whatsapp' && (
                    <svg class={`w-5 h-5 ${iconColor} mr-3`} fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                  )}
                  {option.type === 'phone' && (
                    <svg class={`w-5 h-5 ${iconColor} mr-3`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  )}
                  {option.type === 'link' && (
                    <svg class={`w-5 h-5 ${iconColor} mr-3`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  )}
                  <div>
                    <p class="font-semibold text-gray-900 text-sm">{option.label}</p>
                    {option.sublabel && <p class="text-xs text-gray-500">{option.sublabel}</p>}
                  </div>
                </a>
              );
            })}
          </div>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-white hover:text-primary-500"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden bg-secondary-800 border-t border-primary-500">
    <div class="px-4 py-4 space-y-3">
      {navLinks.map((link: any) => (
        <a
          href={link.href}
          class="block px-4 py-2 text-gray-300 hover:bg-secondary-700 hover:text-primary-500 rounded-lg transition-colors"
        >
          {link.label}
        </a>
      ))}

      {showSearch && (
        <button
          id="mobile-search-button"
          class="block w-full text-left px-4 py-2 text-gray-300 hover:bg-secondary-700 hover:text-primary-500 rounded-lg transition-colors"
        >
          <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Search
        </button>
      )}

      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="block bg-primary-500 text-black px-4 py-3 rounded-lg font-bold text-center hover:bg-primary-400 transition-colors"
      >
        Book on WhatsApp
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Book Now Dropdown functionality
  const dropdownBtn = document.getElementById('book-now-dropdown-btn');
  const dropdownMenu = document.getElementById('book-now-dropdown');

  dropdownBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    dropdownMenu?.classList.toggle('hidden');
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (!dropdownMenu?.contains(e.target as Node) && !dropdownBtn?.contains(e.target as Node)) {
      dropdownMenu?.classList.add('hidden');
    }
  });

  // Search functionality
  const searchButton = document.getElementById('search-button');
  const mobileSearchButton = document.getElementById('mobile-search-button');

  const handleSearch = () => {
    const searchTerm = prompt('What are you looking for?');
    if (searchTerm) {
      // Simple search implementation - you can enhance this later
      console.log('Searching for:', searchTerm);
      alert(`Search functionality will be implemented soon. You searched for: ${searchTerm}`);
    }
  };

  searchButton?.addEventListener('click', handleSearch);
  mobileSearchButton?.addEventListener('click', handleSearch);
</script>
