---
import { urlFor } from '../lib/sanity';

interface Props {
  data?: {
    sectionTitle?: string;
    emotionalTagline?: string;
    subDescription?: string;
    safetyBadges?: Array<{
      title: string;
      description: string;
      icon: string;
    }>;
    familyImage?: any;
    ctaText?: string;
    ctaLink?: string;
    showOnHomepage?: boolean;
  };
}

const { data } = Astro.props;

// Don't render if showOnHomepage is explicitly false
if (data?.showOnHomepage === false) {
  return null;
}

const sectionTitle = data?.sectionTitle || 'Your Safety is Our Priority';
const emotionalTagline = data?.emotionalTagline || "Don't compromise on your family's safety during the trip. Travel with trusted, verified professionals.";
const subDescription = data?.subDescription || 'Every journey with Kathgodam Taxi is backed by our commitment to passenger safety, experienced drivers, and well-maintained vehicles.';
const ctaText = data?.ctaText || 'Book a Safe Ride';
const ctaLink = data?.ctaLink || '/contact';
const familyImageUrl = data?.familyImage ? urlFor(data.familyImage).width(600).height(400).url() : null;
const familyImageAlt = data?.familyImage?.alt || 'Safe family travel with Kathgodam Taxi';

const defaultBadges = [
  { title: 'Background Verified Drivers', description: 'All drivers undergo thorough police verification and background checks', icon: 'userCheck' },
  { title: 'Strict No-Alcohol Policy', description: 'Zero tolerance for alcohol - our drivers never drink and drive', icon: 'noAlcohol' },
  { title: '15+ Years Experience', description: 'Seasoned drivers with extensive knowledge of mountain roads', icon: 'experience' },
  { title: 'GPS Tracked Vehicles', description: 'Real-time tracking for your peace of mind throughout the journey', icon: 'gps' },
];

const badges = data?.safetyBadges && data.safetyBadges.length > 0 ? data.safetyBadges : defaultBadges;
---

<section class="py-16 relative overflow-hidden" style="background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 50%, #ccfbf1 100%);">
  <!-- Decorative Background Elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-64 h-64 bg-green-500 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-emerald-500 rounded-full blur-3xl"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-2 bg-green-100 text-green-800 px-4 py-2 rounded-full mb-4">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        <span class="font-semibold text-sm">Safety First</span>
      </div>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        {sectionTitle}
      </h2>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto font-medium mb-2">
        {emotionalTagline}
      </p>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        {subDescription}
      </p>
    </div>

    <!-- Content Grid -->
    <div class={`grid ${familyImageUrl ? 'lg:grid-cols-5' : 'lg:grid-cols-1'} gap-8 items-center`}>
      <!-- Safety Badges Grid -->
      <div class={`${familyImageUrl ? 'lg:col-span-3' : ''}`}>
        <div class="grid sm:grid-cols-2 gap-4">
          {badges.map((badge) => (
            <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-green-100 hover:border-green-300 group">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-14 h-14 bg-gradient-to-br from-green-100 to-emerald-100 rounded-xl flex items-center justify-center text-green-600 group-hover:from-green-200 group-hover:to-emerald-200 transition-colors">
                  {badge.icon === 'shield' && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                  )}
                  {badge.icon === 'userCheck' && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11l2 2 4-4"/>
                    </svg>
                  )}
                  {badge.icon === 'noAlcohol' && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <circle cx="12" cy="12" r="9" stroke-width="2"/>
                      <path stroke-linecap="round" stroke-width="2" d="M5.5 5.5l13 13"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 9l6 6M9.5 6.5v2a2.5 2.5 0 005 0v-2"/>
                    </svg>
                  )}
                  {badge.icon === 'experience' && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                    </svg>
                  )}
                  {badge.icon === 'gps' && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  )}
                  {badge.icon === 'car' && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"/>
                    </svg>
                  )}
                  {badge.icon === 'family' && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                  )}
                  {badge.icon === 'phone' && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  )}
                  {badge.icon === 'certificate' && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                  )}
                  {badge.icon === 'heart' && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                  )}
                  {!['shield', 'userCheck', 'noAlcohol', 'experience', 'gps', 'car', 'family', 'phone', 'certificate', 'heart'].includes(badge.icon) && (
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                  )}
                </div>
                <div>
                  <h3 class="text-lg font-bold text-gray-900 mb-1">{badge.title}</h3>
                  <p class="text-gray-600 text-sm">{badge.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Optional Family Image -->
      {familyImageUrl && (
        <div class="lg:col-span-2 hidden lg:block">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img
              src={familyImageUrl}
              alt={familyImageAlt}
              class="w-full h-full object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-green-900/20 to-transparent"></div>
          </div>
        </div>
      )}
    </div>

    <!-- CTA Button -->
    <div class="text-center mt-10">
      <a
        href={ctaLink}
        class="inline-flex items-center gap-2 bg-green-600 text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-green-700 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        {ctaText}
      </a>
    </div>
  </div>
</section>
