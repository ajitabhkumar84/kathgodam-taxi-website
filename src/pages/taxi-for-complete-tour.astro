---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import WhatsAppFAB from '../components/WhatsAppFAB.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import TourCard from '../components/TourCard.astro';
import '../styles/global.css';
import { getCompleteTourPage, getSiteSettings, getHomePage, urlFor } from '../lib/sanity';

// Fetch page data from Sanity
const pageData = await getCompleteTourPage();
const siteSettings = await getSiteSettings();
const homePage = await getHomePage(); // Fetch homepage data for testimonials

// Fallback if no data is available
if (!pageData) {
  return new Response('Page not configured in Sanity CMS. Please add Complete Tour Page content in Sanity Studio.', {
    status: 404,
  });
}

const whatsappNumber = siteSettings?.whatsappNumber || '917351721351';
const baseWhatsappUrl = `https://wa.me/${whatsappNumber}`;

// Get SEO data
const { seo, hero, pricingSection, inclusionExclusionSection, packagesSection, popularItinerariesSection, safetySection, faqSection, ctaSection } = pageData;

// Get testimonials from homepage data
const testimonials = homePage?.testimonials || [];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{seo.title}</title>
    <meta name="description" content={seo.description}>
    {seo.keywords && <meta name="keywords" content={seo.keywords}>}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <!-- Open Graph -->
    <meta property="og:title" content={seo.title}>
    <meta property="og:description" content={seo.description}>
    <meta property="og:type" content="website">
</head>
<body class="antialiased">
    <Navbar />

    <main class="pt-16">
        <!-- Hero Section -->
        <section class="relative bg-gradient-to-br from-primary-500 via-primary-600 to-primary-700 text-white overflow-hidden" style="min-height: 65vh;">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-0 left-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
                <div class="absolute bottom-0 right-0 w-96 h-96 bg-black rounded-full blur-3xl"></div>
            </div>

            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
                <div class="grid lg:grid-cols-2 gap-8 items-center">
                    <div class="space-y-4">
                        <!-- Badge -->
                        <div class="inline-flex items-center gap-2 bg-black/30 backdrop-blur-sm px-3 py-1.5 rounded-full text-sm font-semibold">
                            <svg class="w-4 h-4 text-primary-300" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            {hero.badge}
                        </div>

                        <!-- Headline -->
                        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight">
                            {hero.headline.line1}
                            <span class="text-secondary-900 block">{hero.headline.line2}</span>
                            <span class="text-2xl md:text-3xl lg:text-4xl">{hero.headline.line3}</span>
                        </h1>

                        <!-- Subheadline -->
                        <p class="text-base md:text-lg text-white/90 leading-relaxed">
                            {hero.subheadline}
                        </p>

                        <!-- CTA Buttons -->
                        <div class="flex flex-wrap gap-3">
                            <a href="#pricing-table" class="inline-flex items-center gap-2 bg-secondary-900 text-primary-500 px-6 py-3 rounded-lg font-bold hover:bg-secondary-800 transition-all shadow-xl hover:shadow-2xl hover:scale-105">
                                <span>View Rates</span>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </a>
                            <a href={`${baseWhatsappUrl}?text=${encodeURIComponent('Hi, I want to book a car for complete tour')}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-white text-secondary-900 px-6 py-3 rounded-lg font-bold hover:bg-gray-100 transition-all shadow-xl hover:shadow-2xl hover:scale-105">
                                <svg class="w-5 h-5 text-[#25d366]" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                                </svg>
                                <span>Quick Booking</span>
                            </a>
                        </div>

                        <!-- Trust Indicators -->
                        <div class="grid grid-cols-3 gap-4 pt-4">
                            {hero.trustIndicators && hero.trustIndicators.map((indicator: any) => (
                                <div>
                                    <div class="text-2xl md:text-3xl font-bold text-secondary-900">{indicator.number}</div>
                                    <div class="text-xs text-white/80">{indicator.label}</div>
                                </div>
                            ))}
                        </div>
                    </div>

                    <!-- Hero Image -->
                    <div class="hidden lg:block">
                        <div class="relative">
                            {hero.heroImage && (
                                <picture>
                                    <!-- Mobile Image (shown on screens smaller than 768px) -->
                                    {hero.mobileHeroImage && (
                                        <source media="(max-width: 767px)" srcset={urlFor(hero.mobileHeroImage).width(768).height(1024).url()} />
                                    )}
                                    <!-- Desktop Image (shown on screens 768px and larger) -->
                                    <source media="(min-width: 768px)" srcset={urlFor(hero.heroImage).width(700).height(450).url()} />
                                    <!-- Fallback -->
                                    <img
                                        src={urlFor(hero.heroImage).width(700).height(450).url()}
                                        alt={hero.mobileHeroImage?.alt || hero.heroImage.alt || 'Taxi for complete tour in Uttarakhand'}
                                        class="rounded-2xl shadow-2xl w-full"
                                        loading="eager"
                                    />
                                </picture>
                            )}
                            {!hero.heroImage && (
                                <img
                                    src="https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?w=700&h=450&fit=crop"
                                    alt="Scenic mountain road in Uttarakhand"
                                    class="rounded-2xl shadow-2xl w-full"
                                    loading="eager"
                                />
                            )}
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Pricing Section -->
        <section id="pricing-table" class="py-16 lg:py-20 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                        {pricingSection.heading}
                    </h2>
                    <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                        {pricingSection.subheading}
                    </p>
                </div>

                <!-- Season Legend -->
                <div class="grid md:grid-cols-3 gap-4 mb-8 max-w-3xl mx-auto">
                    <div class="bg-primary-50 border-2 border-primary-200 rounded-lg p-4 text-center">
                        <div class="font-bold text-primary-700 mb-1">{pricingSection.seasonLabel}</div>
                        {pricingSection.seasonDateRanges && pricingSection.seasonDateRanges.length > 0 && (
                            <div class="text-xs text-gray-600 space-y-0.5">
                                {pricingSection.seasonDateRanges.map((range: string) => (
                                    <div>{range}</div>
                                ))}
                            </div>
                        )}
                        {(!pricingSection.seasonDateRanges || pricingSection.seasonDateRanges.length === 0) && pricingSection.seasonDescription && (
                            <div class="text-xs text-gray-600">{pricingSection.seasonDescription}</div>
                        )}
                    </div>
                    <div class="bg-gray-50 border-2 border-gray-200 rounded-lg p-4 text-center">
                        <div class="font-bold text-gray-700 mb-1">{pricingSection.midSeasonLabel}</div>
                        {pricingSection.midSeasonDateRanges && pricingSection.midSeasonDateRanges.length > 0 && (
                            <div class="text-xs text-gray-600 space-y-0.5">
                                {pricingSection.midSeasonDateRanges.map((range: string) => (
                                    <div>{range}</div>
                                ))}
                            </div>
                        )}
                        {(!pricingSection.midSeasonDateRanges || pricingSection.midSeasonDateRanges.length === 0) && pricingSection.midSeasonDescription && (
                            <div class="text-xs text-gray-600">{pricingSection.midSeasonDescription}</div>
                        )}
                    </div>
                    <div class="bg-green-50 border-2 border-green-200 rounded-lg p-4 text-center">
                        <div class="font-bold text-green-700 mb-1">{pricingSection.offSeasonLabel}</div>
                        {pricingSection.offSeasonDateRanges && pricingSection.offSeasonDateRanges.length > 0 && (
                            <div class="text-xs text-gray-600 space-y-0.5">
                                {pricingSection.offSeasonDateRanges.map((range: string) => (
                                    <div>{range}</div>
                                ))}
                            </div>
                        )}
                        {(!pricingSection.offSeasonDateRanges || pricingSection.offSeasonDateRanges.length === 0) && pricingSection.offSeasonDescription && (
                            <div class="text-xs text-gray-600">{pricingSection.offSeasonDescription}</div>
                        )}
                    </div>
                </div>

                <!-- Pricing Cards Grid -->
                <div class="space-y-6">
                    {pricingSection.carCategories && pricingSection.carCategories.map((category: any) => (
                        <div class={`${category.isPopular ? 'relative pt-4' : ''}`}>
                            {category.isPopular && (
                                <div class="absolute top-0 right-6 bg-primary-600 text-white px-4 py-1 rounded-full text-sm font-bold shadow-lg z-10">
                                    ⭐ POPULAR
                                </div>
                            )}
                            <div class={`bg-white rounded-2xl ${category.isPopular ? 'shadow-xl hover:shadow-2xl' : 'shadow-lg hover:shadow-xl'} transition-all duration-300 border-2 ${category.isPopular ? 'border-primary-500' : 'border-gray-200'} overflow-hidden`}>
                            <div class={`${category.isPopular ? 'bg-gradient-to-r from-primary-100 to-primary-50' : 'bg-gradient-to-r from-gray-100 to-gray-50'} px-6 py-4 border-b-2 ${category.isPopular ? 'border-primary-300' : 'border-gray-200'} flex items-center justify-between`}>
                                <div>
                                    <h3 class="text-xl md:text-2xl font-bold text-gray-900">{category.name}</h3>
                                    <p class={`text-sm mt-1 ${category.isPopular ? 'text-gray-700 font-medium' : 'text-gray-600'}`}>{category.vehicles}</p>
                                </div>
                                {category.image && (
                                    <img
                                        src={urlFor(category.image).width(120).height(80).url()}
                                        alt={category.image.alt || category.name}
                                        class="hidden md:block w-24 h-16 object-cover rounded-lg"
                                    />
                                )}
                            </div>
                            <div class={`p-6 ${category.isPopular ? 'bg-primary-50/30' : ''}`}>
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                    <div class={`text-center p-4 rounded-lg ${category.isPopular ? 'bg-primary-100 border-2 border-primary-300' : 'bg-primary-50 border border-primary-200'}`}>
                                        <div class={`text-xs font-semibold mb-1 ${category.isPopular ? 'text-primary-800' : 'text-primary-700'}`}>{pricingSection.seasonLabel.toUpperCase()}</div>
                                        <div class={`text-3xl font-bold ${category.isPopular ? 'text-primary-700' : 'text-primary-600'}`}>₹{category.seasonPrice.toLocaleString()}</div>
                                        <div class={`text-xs mt-1 ${category.isPopular ? 'text-gray-600' : 'text-gray-500'}`}>per day</div>
                                    </div>
                                    <div class={`text-center p-4 rounded-lg ${category.isPopular ? 'bg-primary-50 border-2 border-primary-200' : 'bg-gray-50 border border-gray-200'}`}>
                                        <div class={`text-xs font-semibold mb-1 ${category.isPopular ? 'text-primary-800' : 'text-gray-700'}`}>{pricingSection.midSeasonLabel.toUpperCase()}</div>
                                        <div class={`text-3xl font-bold ${category.isPopular ? 'text-primary-700' : 'text-gray-700'}`}>₹{category.midSeasonPrice.toLocaleString()}</div>
                                        <div class={`text-xs mt-1 ${category.isPopular ? 'text-gray-600' : 'text-gray-500'}`}>per day</div>
                                    </div>
                                    <div class={`text-center p-4 rounded-lg ${category.isPopular ? 'bg-green-100 border-2 border-green-300' : 'bg-green-50 border border-green-200'}`}>
                                        <div class={`text-xs font-semibold mb-1 ${category.isPopular ? 'text-green-800' : 'text-green-700'}`}>{pricingSection.offSeasonLabel.toUpperCase()}</div>
                                        <div class={`text-3xl font-bold ${category.isPopular ? 'text-green-700' : 'text-green-600'}`}>₹{category.offSeasonPrice.toLocaleString()}</div>
                                        <div class={`text-xs mt-1 ${category.isPopular ? 'text-gray-600' : 'text-gray-500'}`}>per day</div>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>
                    ))}
                </div>

                <!-- Note -->
                {pricingSection.noteText && (
                    <div class="mt-8 text-center">
                        <p class="text-sm text-gray-600 italic">
                            <svg class="w-4 h-4 inline text-primary-600 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                            </svg>
                            {pricingSection.noteText}
                        </p>
                    </div>
                )}
            </div>
        </section>

        <!-- What's Included & Excluded Section -->
        <section class="py-16 lg:py-20 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                        {inclusionExclusionSection.heading}
                    </h2>
                    <p class="text-lg text-gray-600">
                        {inclusionExclusionSection.subheading}
                    </p>
                </div>

                <div class="grid lg:grid-cols-2 gap-8">
                    <!-- What's INCLUDED -->
                    <div class="bg-gradient-to-br from-green-50 to-white rounded-2xl shadow-xl p-8 border-2 border-green-200">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center">
                                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900">What's Included</h3>
                        </div>

                        <ul class="space-y-4">
                            {inclusionExclusionSection.included && inclusionExclusionSection.included.map((item: any) => (
                                <li class="flex items-start gap-3">
                                    <div class="mt-1 flex-shrink-0">
                                        <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <div class="font-semibold text-gray-900">{item.title}</div>
                                        <div class="text-sm text-gray-600">{item.description}</div>
                                    </div>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- What's EXCLUDED -->
                    <div class="bg-gradient-to-br from-orange-50 to-white rounded-2xl shadow-xl p-8 border-2 border-orange-200">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-12 h-12 bg-orange-500 rounded-full flex items-center justify-center">
                                <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900">What's NOT Included</h3>
                        </div>

                        <ul class="space-y-4">
                            {inclusionExclusionSection.excluded && inclusionExclusionSection.excluded.map((item: any) => (
                                <li class="flex items-start gap-3">
                                    <div class="mt-1 flex-shrink-0">
                                        <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <div class="font-semibold text-gray-900">{item.title}</div>
                                        <div class="text-sm text-gray-600">{item.description}</div>
                                    </div>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Tour Duration Packages Section -->
        <section id="packages" class="py-16 lg:py-20 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                        {packagesSection.heading}
                    </h2>
                    <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                        {packagesSection.subheading}
                    </p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                    {[packagesSection.package1, packagesSection.package2, packagesSection.package3, packagesSection.package4].map((pkg: any) => (
                        <div class={`${pkg.isCustomPackage ? 'bg-gradient-to-br from-secondary-900 to-secondary-800 border-2 border-secondary-700 text-white' : pkg.isPopular ? 'bg-gradient-to-br from-primary-50 to-white border-2 border-primary-500 relative' : 'bg-gradient-to-br from-gray-50 to-white border-2 border-gray-200'} rounded-2xl p-6 ${pkg.isPopular ? 'hover:shadow-2xl' : 'hover:shadow-xl'} transition-all duration-300 ${pkg.isPopular ? 'transform hover:-translate-y-1' : ''}`}>
                            {pkg.isPopular && !pkg.isCustomPackage && (
                                <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-primary-600 text-white px-4 py-1 rounded-full text-sm font-bold">
                                    POPULAR
                                </div>
                            )}
                            <div class="text-center mb-6">
                                <div class={`${pkg.isCustomPackage ? 'text-primary-400' : 'text-primary-600'} font-semibold text-sm mb-2`}>{pkg.badge}</div>
                                <div class="text-4xl font-bold mb-2">{pkg.duration}</div>
                                <div class={pkg.isCustomPackage ? 'text-gray-300' : 'text-gray-600'}>{pkg.subtitle}</div>
                            </div>
                            <ul class="space-y-3 mb-6">
                                {pkg.features && pkg.features.map((feature: any) => (
                                    <li class="flex items-start gap-2">
                                        <svg class={`w-5 h-5 ${pkg.isCustomPackage ? 'text-primary-400' : 'text-primary-600'} mt-0.5 flex-shrink-0`} fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                        </svg>
                                        <span class={`${pkg.isCustomPackage ? 'text-gray-200' : 'text-gray-700'} ${feature.isBold ? 'font-semibold' : ''}`}>{feature.text}</span>
                                    </li>
                                ))}
                            </ul>
                            <div class="flex gap-2">
                                <a href={`${baseWhatsappUrl}?text=${encodeURIComponent(pkg.whatsappMessage)}`} target="_blank" rel="noopener noreferrer" class="flex-1 flex items-center justify-center gap-1 bg-[#25d366] text-white px-4 py-2.5 rounded-lg font-bold hover:bg-[#1fb855] transition-colors text-sm">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                                    </svg>
                                    WhatsApp
                                </a>
                                <a href="/contact" class="flex-1 text-center bg-gray-200 text-gray-700 px-4 py-2.5 rounded-lg font-bold hover:bg-gray-300 transition-colors text-sm">
                                    Submit Query
                                </a>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Popular Tour Itineraries Section -->
        {popularItinerariesSection && popularItinerariesSection.featuredPackages && popularItinerariesSection.featuredPackages.length > 0 && (
            <section class="py-16 lg:py-20 bg-white">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="text-center mb-12">
                        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                            {popularItinerariesSection.heading}
                        </h2>
                        <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                            {popularItinerariesSection.subheading}
                        </p>
                    </div>

                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                        {popularItinerariesSection.featuredPackages.map((pkg: any) => (
                            <TourCard
                                name={pkg.name}
                                slug={pkg.slug}
                                subtitle={pkg.subtitle}
                                startingPrice={pkg.startingPrice}
                                duration={pkg.duration}
                                highlights={pkg.highlights}
                                image={pkg.featuredHomepageImage || pkg.heroSlides?.[0]?.image}
                            />
                        ))}
                    </div>
                </div>
            </section>
        )}

        <!-- Safety Section -->
        {safetySection && (
            <section class="py-16 lg:py-20 relative overflow-hidden" style="background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 50%, #ccfbf1 100%);">
