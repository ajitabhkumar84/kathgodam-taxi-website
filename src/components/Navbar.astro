---
import { getSiteSettings, getNavbar } from '../lib/sanity';

// Fetch data from Sanity
const siteSettings = await getSiteSettings();
const navbarConfig = await getNavbar();

// Fallback to defaults if Sanity data not available
const logoText = siteSettings?.logoText || 'Kathgodam';
const logoHighlight = siteSettings?.logoHighlight || 'Taxi';
const whatsappNumber = siteSettings?.whatsappNumber || '917351721351';
const whatsappMessage = siteSettings?.whatsappMessage || 'Hi, I would like to book a taxi from Kathgodam.';
const phoneNumber = siteSettings?.phone || '7351721351';

const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;

// Navigation links
const navLinks = navbarConfig?.navigationLinks || [
  { label: 'Home', href: '/' },
  { label: 'Pickup & Drop', href: '#routes' },
  { label: 'Car Rental for Tour', href: '/taxi-for-complete-tour' },
  { label: 'Tour Packages', href: '#tours' },
  { label: 'Temples in Kumaon', href: '#temples' },
  { label: 'Contact', href: '/contact' },
];

const bookNowLabel = navbarConfig?.bookNowLabel || 'Book Now';
const bookNowOptions = navbarConfig?.bookNowOptions || [
  { label: 'WhatsApp', sublabel: 'Instant booking', type: 'whatsapp' },
  { label: 'Call Now', sublabel: phoneNumber, type: 'phone' },
  { label: 'Submit Query', sublabel: 'Get custom quote', type: 'link', href: '/contact' },
];

const showSearch = navbarConfig?.showSearch !== false;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-secondary-900 shadow-lg border-b-4 border-primary-500">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3">
        <div class="bg-primary-500 p-2 rounded-lg">
          <svg class="w-6 h-6 md:w-8 md:h-8 text-black" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.85 7h10.29l1.08 3.11H5.77L6.85 7zM19 17H5v-5h14v5z"/>
            <circle cx="7.5" cy="14.5" r="1.5"/>
            <circle cx="16.5" cy="14.5" r="1.5"/>
          </svg>
        </div>
        <div class="text-xl md:text-2xl font-bold text-white">
          {logoText} <span class="text-primary-500">{logoHighlight}</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-6">
        {navLinks.map((link: any) => {
          if (link.hasDropdown && link.dropdownItems?.length > 0) {
            // Render dropdown menu (desktop: hover to show, click to go to /rates)
            return (
              <div class="relative nav-dropdown-container">
                <a
                  href="/rates"
                  class="nav-dropdown-trigger text-gray-300 hover:text-primary-500 font-medium transition-colors text-sm flex items-center"
                  aria-label={link.label}
                >
                  {link.label}
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </a>

                <!-- Dropdown Menu -->
                <div class="nav-dropdown-menu hidden absolute left-0 top-full pt-2 w-64 z-50">
                  <div class="bg-white rounded-lg shadow-xl border border-gray-200 overflow-hidden">
                  {link.dropdownItems.map((item: any) => {
                    const iconSvg = item.icon === 'taxi' ? (
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.85 7h10.29l1.08 3.11H5.77L6.85 7zM19 17H5v-5h14v5z"/>
                        <circle cx="7.5" cy="14.5" r="1.5"/>
                        <circle cx="16.5" cy="14.5" r="1.5"/>
                      </svg>
                    ) : item.icon === 'list' ? (
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
                      </svg>
                    ) : item.icon === 'map' ? (
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                      </svg>
                    ) : item.icon === 'location' ? (
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    ) : null;

                    return (
                      <a
                        href={item.href}
                        class="flex items-center px-4 py-3 hover:bg-primary-50 transition-colors border-b border-gray-100 last:border-b-0"
                      >
                        {iconSvg && <div class="text-primary-600 mr-3">{iconSvg}</div>}
                        <div>
                          <p class="font-semibold text-gray-900 text-sm">{item.label}</p>
                          {item.description && <p class="text-xs text-gray-500">{item.description}</p>}
                        </div>
                      </a>
                    );
                  })}
                  </div>
                </div>
              </div>
            );
          } else {
            // Render regular link
            return (
              <a
                href={link.href}
                class="text-gray-300 hover:text-primary-500 font-medium transition-colors text-sm"
              >
                {link.label}
              </a>
            );
          }
        })}

        {showSearch && (
          <button
            id="search-button"
            class="text-gray-300 hover:text-primary-500 transition-colors p-2"
            aria-label="Search"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </button>
        )}

        <!-- Book Now Dropdown -->
        <div class="relative">
          <button
            id="book-now-dropdown-btn"
            class="bg-primary-500 text-black px-5 py-2 rounded-lg font-bold hover:bg-primary-400 transition-colors flex items-center space-x-2 text-sm"
          >
            <span>{bookNowLabel}</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>

          <!-- Dropdown Menu -->
          <div
            id="book-now-dropdown"
            class="hidden absolute right-0 top-full pt-2 w-56 z-50"
          >
            <div class="bg-white rounded-lg shadow-xl border border-gray-200 overflow-hidden">
            {bookNowOptions.map((option: any, index: number) => {
              const isLast = index === bookNowOptions.length - 1;
              let href = '#';

              if (option.type === 'whatsapp') {
                href = whatsappUrl;
              } else if (option.type === 'phone') {
                href = `tel:+91${phoneNumber}`;
              } else if (option.type === 'link') {
                href = option.href || '/contact';
              }

              const colorClass = option.type === 'whatsapp' ? 'hover:bg-green-50' :
                                 option.type === 'phone' ? 'hover:bg-blue-50' :
                                 'hover:bg-yellow-50';

              const iconColor = option.type === 'whatsapp' ? 'text-whatsapp' :
                               option.type === 'phone' ? 'text-blue-600' :
                               'text-primary-600';

              return (
                <a
                  href={href}
                  target={option.type === 'whatsapp' ? '_blank' : undefined}
                  rel={option.type === 'whatsapp' ? 'noopener noreferrer' : undefined}
                  class={`flex items-center px-4 py-3 ${colorClass} transition-colors ${!isLast ? 'border-b border-gray-100' : ''}`}
                >
                  {option.type === 'whatsapp' && (
                    <svg class={`w-5 h-5 ${iconColor} mr-3`} fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                  )}
                  {option.type === 'phone' && (
                    <svg class={`w-5 h-5 ${iconColor} mr-3`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  )}
                  {option.type === 'link' && (
                    <svg class={`w-5 h-5 ${iconColor} mr-3`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  )}
                  <div>
                    <p class="font-semibold text-gray-900 text-sm">{option.label}</p>
                    {option.sublabel && <p class="text-xs text-gray-500">{option.sublabel}</p>}
                  </div>
                </a>
              );
            })}
            </div>
          </div>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-white hover:text-primary-500"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden bg-secondary-800 border-t border-primary-500">
    <div class="px-4 py-4 space-y-3">
      {navLinks.map((link: any) => {
        if (link.hasDropdown && link.dropdownItems?.length > 0) {
          // Mobile dropdown
          return (
            <div class="mobile-nav-dropdown">
              <button class="mobile-nav-dropdown-trigger w-full flex items-center justify-between px-4 py-2 text-gray-300 hover:bg-secondary-700 hover:text-primary-500 rounded-lg transition-colors">
                <span>{link.label}</span>
                <svg class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
              <div class="mobile-nav-dropdown-content hidden pl-4 mt-2 space-y-2">
                {link.dropdownItems.map((item: any) => (
                  <a
                    href={item.href}
                    class="block px-4 py-2 text-sm text-gray-400 hover:bg-secondary-700 hover:text-primary-500 rounded-lg transition-colors"
                  >
                    {item.label}
                  </a>
                ))}
              </div>
            </div>
          );
        } else {
          return (
            <a
              href={link.href}
              class="block px-4 py-2 text-gray-300 hover:bg-secondary-700 hover:text-primary-500 rounded-lg transition-colors"
            >
              {link.label}
            </a>
          );
        }
      })}

      {showSearch && (
        <button
          id="mobile-search-button"
          class="block w-full text-left px-4 py-2 text-gray-300 hover:bg-secondary-700 hover:text-primary-500 rounded-lg transition-colors"
        >
          <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Search
        </button>
      )}

      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="block bg-primary-500 text-black px-4 py-3 rounded-lg font-bold text-center hover:bg-primary-400 transition-colors"
      >
        Book on WhatsApp
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Book Now Dropdown functionality
  const dropdownBtn = document.getElementById('book-now-dropdown-btn');
  const dropdownMenu = document.getElementById('book-now-dropdown');

  dropdownBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    dropdownMenu?.classList.toggle('hidden');
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (!dropdownMenu?.contains(e.target as Node) && !dropdownBtn?.contains(e.target as Node)) {
      dropdownMenu?.classList.add('hidden');
    }
  });

  // Search functionality - triggers the search modal
  const searchButton = document.getElementById('search-button');
  const mobileSearchButton = document.getElementById('mobile-search-button');

  const handleSearch = () => {
    // Dispatch custom event to open search modal
    window.dispatchEvent(new CustomEvent('openSearch'));
  };

  searchButton?.addEventListener('click', handleSearch);
  mobileSearchButton?.addEventListener('click', handleSearch);

  // Desktop Navigation Dropdowns (hover to show, click to navigate)
  const navDropdownContainers = document.querySelectorAll('.nav-dropdown-container');

  navDropdownContainers.forEach(container => {
    const trigger = container.querySelector('.nav-dropdown-trigger');
    const menu = container.querySelector('.nav-dropdown-menu');

    if (trigger && menu) {
      // Show dropdown on hover
      container.addEventListener('mouseenter', () => {
        // Close other dropdowns
        navDropdownContainers.forEach(otherContainer => {
          if (otherContainer !== container) {
            const otherMenu = otherContainer.querySelector('.nav-dropdown-menu');
            otherMenu?.classList.add('hidden');
          }
        });

        // Show current dropdown
        menu.classList.remove('hidden');
      });

      // Hide dropdown when mouse leaves the entire container (link + menu)
      container.addEventListener('mouseleave', () => {
        menu.classList.add('hidden');
      });

      // Keep dropdown open when hovering over the menu itself
      menu.addEventListener('mouseenter', () => {
        menu.classList.remove('hidden');
      });
    }
  });

  // Mobile Navigation Dropdowns
  const mobileDropdowns = document.querySelectorAll('.mobile-nav-dropdown');

  mobileDropdowns.forEach(dropdown => {
    const trigger = dropdown.querySelector('.mobile-nav-dropdown-trigger');
    const content = dropdown.querySelector('.mobile-nav-dropdown-content');
    const arrow = trigger?.querySelector('svg');

    if (trigger && content) {
      trigger.addEventListener('click', () => {
        content.classList.toggle('hidden');
        arrow?.classList.toggle('rotate-180');
      });
    }
  });

  // Close mobile dropdowns when clicking a link
  const mobileDropdownLinks = document.querySelectorAll('.mobile-nav-dropdown-content a');
  mobileDropdownLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
