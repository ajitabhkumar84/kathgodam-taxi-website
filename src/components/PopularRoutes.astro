---
import RouteCard from './RouteCard.astro';

const routes = [
  {
    from: 'Kathgodam',
    to: 'Nainital',
    distance: '35 KM',
    duration: '1 hour',
    price: '₹1,200',
    description: 'Enjoy a scenic drive to the beautiful lake city of Nainital. Perfect for families and nature lovers seeking tranquility in the hills.',
    image: 'https://images.unsplash.com/photo-1605640840605-14ac1855827b?q=80&w=2071&auto=format&fit=crop',
    href: '/kathgodam-nainital/'
  },
  {
    from: 'Kathgodam',
    to: 'Kainchi Dham',
    distance: '30 KM',
    duration: '45 min',
    price: '₹1,200',
    description: 'Visit the sacred Kainchi Dham ashram, blessed by Neem Karoli Baba. A spiritual journey through peaceful mountain roads.',
    image: 'https://images.unsplash.com/photo-1582510003544-4d00b7f74220?q=80&w=2070&auto=format&fit=crop'
  },
  {
    from: 'Kathgodam',
    to: 'Mukteshwar',
    distance: '70 KM',
    duration: '2 hours',
    price: '₹2,500',
    description: 'Explore the serene hill station known for its temples and panoramic Himalayan views. Ideal for weekend getaways and adventure enthusiasts.',
    image: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?q=80&w=2070&auto=format&fit=crop'
  },
  {
    from: 'Kathgodam',
    to: 'Jim Corbett',
    distance: '75 KM',
    duration: '2 hours',
    price: '₹2,400',
    description: 'Experience India\'s oldest national park, home to majestic Bengal tigers and diverse wildlife. Perfect for safari adventures.',
    image: 'https://images.unsplash.com/photo-1564760055775-d63b17a55c44?q=80&w=2076&auto=format&fit=crop'
  },
  {
    from: 'Kathgodam',
    to: 'Ranikhet',
    distance: '80 KM',
    duration: '2.5 hours',
    price: '₹2,800',
    description: 'Discover the "Queen\'s Meadow" with stunning views of snow-capped peaks. A peaceful retreat surrounded by pine and oak forests.',
    image: 'https://images.unsplash.com/photo-1563979266-f7a97b3e2d05?q=80&w=2070&auto=format&fit=crop'
  },
  {
    from: 'Kathgodam',
    to: 'Binsar',
    distance: '125 KM',
    duration: '3.5 hours',
    price: '₹3,200',
    description: 'Journey to the wildlife sanctuary offering breathtaking 360-degree views of Himalayan peaks. A paradise for nature photographers.',
    image: 'https://images.unsplash.com/photo-1540979388789-6cee28a1cdc9?q=80&w=2070&auto=format&fit=crop'
  },
  {
    from: 'Kathgodam',
    to: 'Kausani',
    distance: '145 KM',
    duration: '4 hours',
    price: '₹4,000',
    description: 'Visit the "Switzerland of India" renowned for its mesmerizing sunrise views over the Himalayas. A haven for peace seekers.',
    image: 'https://images.unsplash.com/photo-1548013146-72479768bada?q=80&w=2076&auto=format&fit=crop'
  },
  {
    from: 'Pantnagar',
    to: 'Nainital',
    distance: '65 KM',
    duration: '1.5 hours',
    price: '₹2,500',
    description: 'Convenient airport pickup to Nainital. Start your hill station vacation with a comfortable ride from Pantnagar Airport.',
    image: 'https://images.unsplash.com/photo-1559827260-dc66d52bef19?q=80&w=2070&auto=format&fit=crop'
  },
  {
    from: 'Pantnagar',
    to: 'Kathgodam',
    distance: '30 KM',
    duration: '45 min',
    price: '₹1,200',
    description: 'Hassle-free airport transfer service. Connect seamlessly from Pantnagar Airport to Kathgodam railway station.',
    image: 'https://images.unsplash.com/photo-1544620347-c4fd4a3d5957?q=80&w=2069&auto=format&fit=crop'
  }
];
---

<section class="py-10 bg-gray-50" id="routes">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center bg-primary-100 text-primary-900 px-4 py-2 rounded-full mb-4 font-semibold text-sm">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
        </svg>
        Popular Routes
      </div>
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        Our Most Requested <span class="text-primary-600">Taxi Services</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Fixed prices, no hidden charges. All fares include tolls, state taxes, and driver allowances. Book now for a hassle-free journey!
      </p>
    </div>

    <!-- Routes Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {routes.map((route) => (
        <RouteCard
          from={route.from}
          to={route.to}
          distance={route.distance}
          duration={route.duration}
          price={route.price}
          description={route.description}
          image={route.image}
          href={route.href}
        />
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="mt-8 text-center">
      <p class="text-gray-600 mb-4">Don't see your destination? We cover all Kumaon region destinations!</p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a
          href="/contact"
          class="inline-flex items-center justify-center bg-primary-500 text-black px-8 py-3 rounded-lg font-bold hover:bg-primary-400 transition-colors shadow-lg"
        >
          Submit Query
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
        <a
          href={`https://wa.me/917351721351?text=${encodeURIComponent('Hi, I need a custom quote for my destination.')}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center bg-secondary-900 text-white px-8 py-3 rounded-lg font-bold hover:bg-secondary-800 transition-colors shadow-lg"
        >
          WhatsApp Us
          <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
