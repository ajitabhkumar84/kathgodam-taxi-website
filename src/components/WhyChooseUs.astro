---
import { urlFor } from '../lib/sanity';

interface Props {
  data?: {
    sectionTitle?: string;
    sectionDescription?: string;
    image?: any;
    features?: Array<{
      title: string;
      description: string;
      icon: string;
    }>;
  };
}

const { data } = Astro.props;

const sectionTitle = data?.sectionTitle || 'A Safe, Hassle-Free Experience';
const sectionDescription = data?.sectionDescription || "We're committed to providing you with transparent pricing and exceptional service for your journey through the Kumaon hills.";
const imageUrl = data?.image ? urlFor(data.image).width(800).height(600).url() : 'https://images.unsplash.com/photo-1549317661-bd32c8ce0db2?q=80&w=2070&auto=format&fit=crop';
const imageAlt = data?.image?.alt || 'Clean, modern taxi';

const defaultFeatures = [
  { title: 'Crystal Clear Fixed Pricing', description: 'No surprises. The price we quote is the price you pay.', icon: 'clipboard' },
  { title: 'No Hidden Fees', description: 'All our prices include tolls, state taxes, and driver allowances.', icon: 'dollar' },
  { title: 'Well-Maintained & Clean Cars', description: 'Our fleet is professionally maintained for your comfort and safety.', icon: 'check' },
  { title: 'Local Expert Drivers', description: 'Our courteous, local drivers are your guides to the hills.', icon: 'users' },
];

const features = data?.features || defaultFeatures;

// Icon mapping
const iconMap: Record<string, string> = {
