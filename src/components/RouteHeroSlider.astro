---
interface Slide {
  image: string;
  mobileImage?: string;
  imageAlt?: string;
  title: string;
  description: string;
}

interface Props {
  from: string;
  to: string;
  distance: string;
  duration: string;
  startingPrice: string;
  slides?: Slide[];
  destinationLatitude?: number;
  destinationLongitude?: number;
}

const { from, to, distance, duration, startingPrice, slides: customSlides, destinationLatitude, destinationLongitude } = Astro.props;

// Weather widget coordinates (format: lat/lon)
const weatherCoords = destinationLatitude && destinationLongitude
  ? `${destinationLatitude.toFixed(2)}/${destinationLongitude.toFixed(2)}`
  : null;

// Use custom slides if provided, otherwise use default slides
const slides = customSlides && customSlides.length > 0 ? customSlides : [
  {
    image: 'https://images.unsplash.com/photo-1626621341517-bbf3d9990a23?q=80&w=2070&auto=format&fit=crop',
    title: `Scenic Drive from ${from} to ${to}`,
    description: 'Experience the beautiful mountain roads with professional drivers'
  },
  {
    image: 'https://images.unsplash.com/photo-1605649487212-47bdab064df7?q=80&w=2070&auto=format&fit=crop',
    title: `Discover ${to}`,
    description: 'Explore the enchanting hill station nestled in the Kumaon hills'
  },
  {
    image: 'https://images.unsplash.com/photo-1571896349842-33c89424de2d?q=80&w=2080&auto=format&fit=crop',
    title: 'Comfortable & Safe Journey',
    description: 'Well-maintained vehicles with experienced local drivers'
  }
];
---

<section class="relative h-[500px] sm:h-[550px] md:h-[600px] lg:h-[650px] xl:h-[700px] overflow-hidden">
  <!-- Slider Container -->
  <div class="route-slider relative h-full">
    {slides.map((slide, index) => (
      <div
        class={`slider-item absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
        data-slide={index}
      >
        <!-- Background Image -->
        <picture class="absolute inset-0 w-full h-full">
          <!-- Mobile Image (shown on screens smaller than 768px) -->
          {slide.mobileImage && (
            <source media="(max-width: 767px)" srcset={slide.mobileImage} />
          )}
          <!-- Desktop Image (shown on screens 768px and larger) -->
          <source media="(min-width: 768px)" srcset={slide.image} />
          <!-- Fallback for browsers that don't support picture element -->
          <img
            src={slide.image}
            alt={slide.imageAlt || slide.title}
            class="absolute inset-0 w-full h-full object-cover object-center"
            loading="eager"
          />
        </picture>

        <!-- Overlay -->
        <div class="absolute inset-0 bg-gradient-to-r from-black/50 via-black/30 to-transparent"></div>

        <!-- Content -->
        <div class="relative h-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center">
          <div class="max-w-3xl text-white">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
              {slide.title}
            </h1>
            <p class="text-xl md:text-2xl text-gray-200 mb-8">
              {slide.description}
            </p>

            {index === 0 && (
              <div class="flex flex-wrap items-center gap-6 mb-8">
                <div class="flex items-center bg-white/10 backdrop-blur-sm px-4 py-3 rounded-lg border border-white/20">
                  <svg class="w-6 h-6 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <div>
                    <p class="text-xs text-gray-300">Distance</p>
                    <p class="text-lg font-bold">{distance}</p>
                  </div>
                </div>

                <div class="flex items-center bg-white/10 backdrop-blur-sm px-4 py-3 rounded-lg border border-white/20">
                  <svg class="w-6 h-6 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <div>
                    <p class="text-xs text-gray-300">Duration</p>
                    <p class="text-lg font-bold">{duration}</p>
                  </div>
                </div>

                <div class="flex items-center bg-primary-500 px-6 py-3 rounded-lg">
                  <div>
                    <p class="text-xs text-black/70 font-medium">Starting from</p>
                    <p class="text-2xl font-bold text-black">{startingPrice}</p>
                  </div>
                </div>
              </div>
            )}

            {index === 1 && (
              <div class="flex flex-wrap items-center gap-6 mb-8">
                <div class="bg-white/10 backdrop-blur-sm px-6 py-4 rounded-lg border border-white/20 weather-widget-container">
                  <div class="flex items-center mb-2">
                    <svg class="w-6 h-6 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>
                    </svg>
                    <p class="text-xs text-gray-300">Current Weather in {to}</p>
                  </div>
                  <div id="weather-display-slider" class="text-white">
                    {weatherCoords ? (
                      <p class="text-sm">Loading weather...</p>
                    ) : (
                      <p class="text-sm text-gray-300">Weather data unavailable</p>
                    )}
                  </div>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Slider Controls -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 flex items-center space-x-3">
    {slides.map((_, index) => (
      <button
        class={`slider-dot w-3 h-3 rounded-full transition-all p-3 bg-clip-content ${index === 0 ? 'bg-primary-500 w-8' : 'bg-white/50'}`}
        data-slide-to={index}
        aria-label={`Go to slide ${index + 1}`}
      ></button>
    ))}
  </div>

  <!-- Navigation Arrows -->
  <button
    class="slider-prev absolute left-4 top-1/2 transform -translate-y-1/2 z-20 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white p-3 rounded-full transition-all"
    aria-label="Previous slide"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
  </button>

  <button
    class="slider-next absolute right-4 top-1/2 transform -translate-y-1/2 z-20 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white p-3 rounded-full transition-all"
    aria-label="Next slide"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </button>
</section>

<script define:vars={{ weatherCoords, to }}>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.slider-item');
  const dots = document.querySelectorAll('.slider-dot');
  const totalSlides = slides.length;

  function showSlide(index) {
    slides.forEach((slide, i) => {
      slide.classList.toggle('opacity-100', i === index);
      slide.classList.toggle('opacity-0', i !== index);
    });

    dots.forEach((dot, i) => {
      if (i === index) {
        dot.classList.add('bg-primary-500', 'w-8');
        dot.classList.remove('bg-white/50');
      } else {
        dot.classList.remove('bg-primary-500', 'w-8');
        dot.classList.add('bg-white/50');
      }
    });
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % totalSlides;
    showSlide(currentSlide);
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
    showSlide(currentSlide);
  }

  // Auto-advance slides
  setInterval(nextSlide, 5000);

  // Navigation controls
  document.querySelector('.slider-next')?.addEventListener('click', nextSlide);
  document.querySelector('.slider-prev')?.addEventListener('click', prevSlide);

  // Dot navigation
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      currentSlide = index;
      showSlide(currentSlide);
    });
  });

  // Touch/swipe support for mobile
  let touchStartX = 0;
  let touchEndX = 0;
  const swipeThreshold = 50;
  const routeSlider = document.querySelector('.route-slider');

  routeSlider?.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
  }, { passive: true });

  routeSlider?.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    const diff = touchStartX - touchEndX;
    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0) {
        nextSlide();
      } else {
        prevSlide();
      }
    }
  }, { passive: true });

  // Fetch weather data for slider 2
  const weatherDisplay = document.getElementById('weather-display-slider');
  const destination = to;

  if (weatherDisplay && weatherCoords && destination) {
    const [lat, lon] = weatherCoords.split('/');

    // Using Open-Meteo API (free, no API key required)
    fetch(`https://api.open-meteo.com/v1/forecast?latitude=${lat}&longitude=${lon}&current_weather=true&timezone=auto`)
      .then(response => response.json())
      .then(data => {
        const current = data.current_weather;
        const temp = Math.round(current.temperature);
        const weatherCode = current.weathercode;

        // Weather condition mapping
        const getWeatherCondition = (code) => {
          if (code === 0) return '‚òÄÔ∏è Clear';
          if (code <= 3) return '‚õÖ Partly Cloudy';
          if (code <= 49) return 'üå´Ô∏è Foggy';
          if (code <= 67) return 'üåßÔ∏è Rainy';
          if (code <= 77) return 'üå®Ô∏è Snowy';
          if (code <= 99) return '‚õàÔ∏è Thunderstorm';
          return 'üå§Ô∏è Cloudy';
        };

        weatherDisplay.innerHTML = `
          <div class="flex items-center gap-3">
            <div class="text-4xl">${getWeatherCondition(weatherCode).split(' ')[0]}</div>
            <div>
              <p class="text-3xl font-bold">${temp}¬∞C</p>
              <p class="text-sm text-gray-200">${getWeatherCondition(weatherCode).split(' ')[1]}</p>
            </div>
          </div>
        `;
      })
      .catch(error => {
        weatherDisplay.innerHTML = '<p class="text-sm text-gray-300">Weather unavailable</p>';
      });
  }
</script>
