---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import '../styles/global.css';

const pageTitle = 'Multi-Day Car Rental for Complete Tours | Kathgodam Taxi';
const pageDescription = 'Rent a car for your complete Uttarakhand tour. Flexible multi-day packages, professional drivers, and comfortable vehicles for exploring Nainital, Jim Corbett, Ranikhet, and more.';
const whatsappNumber = '917351721351';
const baseWhatsappUrl = `https://wa.me/${whatsappNumber}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription}>
    <meta name="keywords" content="multi-day car rental, Uttarakhand tour packages, Kathgodam taxi, complete tour car rental, Nainital tour packages">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle}>
    <meta property="og:description" content={pageDescription}>
    <meta property="og:type" content="website">
</head>
<body class="antialiased">
    <Navbar />

    <main class="pt-16">
        <!-- Compact Hero Section -->
        <section class="relative bg-gradient-to-br from-primary-500 via-primary-600 to-primary-700 text-white overflow-hidden" style="min-height: 65vh;">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-0 left-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
                <div class="absolute bottom-0 right-0 w-96 h-96 bg-black rounded-full blur-3xl"></div>
            </div>

            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
                <div class="grid lg:grid-cols-2 gap-8 items-center">
                    <div class="space-y-4">
                        <!-- Badge -->
                        <div class="inline-flex items-center gap-2 bg-black/30 backdrop-blur-sm px-3 py-1.5 rounded-full text-sm font-semibold">
                            <svg class="w-4 h-4 text-primary-300" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            Trusted by 500+ Happy Travelers
                        </div>

                        <!-- Headline -->
                        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight">
                            Your Complete
                            <span class="text-secondary-900 block">Uttarakhand Journey</span>
                            <span class="text-2xl md:text-3xl lg:text-4xl">Awaits</span>
                        </h1>

                        <!-- Subheadline -->
                        <p class="text-base md:text-lg text-white/90 leading-relaxed">
                            Experience the mountains at your own pace. Multi-day car rentals with professional drivers, comfortable vehicles, and complete flexibility to explore every hidden gem of Kumaon.
                        </p>

                        <!-- CTA Buttons -->
                        <div class="flex flex-wrap gap-3">
                            <a href="#pricing-table" class="inline-flex items-center gap-2 bg-secondary-900 text-primary-500 px-6 py-3 rounded-lg font-bold hover:bg-secondary-800 transition-all shadow-xl hover:shadow-2xl hover:scale-105">
                                <span>View Rates</span>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </a>
                            <a href={`${baseWhatsappUrl}?text=${encodeURIComponent('Hi, I want to book a car for complete tour')}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-white text-secondary-900 px-6 py-3 rounded-lg font-bold hover:bg-gray-100 transition-all shadow-xl hover:shadow-2xl hover:scale-105">
                                <svg class="w-5 h-5 text-[#25d366]" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                                </svg>
                                <span>Quick Booking</span>
                            </a>
                        </div>

                        <!-- Trust Indicators -->
                        <div class="grid grid-cols-3 gap-4 pt-4">
                            <div>
                                <div class="text-2xl md:text-3xl font-bold text-secondary-900">500+</div>
                                <div class="text-xs text-white/80">Happy Travelers</div>
                            </div>
                            <div>
                                <div class="text-2xl md:text-3xl font-bold text-secondary-900">15+</div>
                                <div class="text-xs text-white/80">Years Experience</div>
                            </div>
                            <div>
                                <div class="text-2xl md:text-3xl font-bold text-secondary-900">24/7</div>
                                <div class="text-xs text-white/80">Support</div>
                            </div>
                        </div>
                    </div>

                    <!-- Hero Image -->
                    <div class="hidden lg:block">
                        <div class="relative">
                            <img
                                src="https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?w=700&h=450&fit=crop"
                                alt="Uttarakhand Mountain Roads"
                                class="relative rounded-2xl shadow-2xl w-full object-cover h-[400px]"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Choose Your Ride - Pricing Section -->
        <section id="pricing-table" class="py-16 lg:py-20 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                        Choose Your <span class="text-primary-600">Ride</span>
                    </h2>
                    <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                        Per day rates for various car categories - transparent pricing for every season
                    </p>
                </div>

                <!-- Season Legend -->
                <div class="mb-8 grid grid-cols-1 md:grid-cols-3 gap-4 max-w-5xl mx-auto">
                    <div class="bg-gradient-to-br from-primary-50 to-white border-2 border-primary-300 rounded-lg p-4">
                        <div class="font-bold text-primary-700 mb-1">Season Rates</div>
                        <div class="text-xs text-gray-600">15 Apr - 10 Jul + Long Holidays</div>
                        <div class="text-xs text-gray-600">25 Sep - 31 Oct + 20 Dec - 15 Jan</div>
                    </div>
                    <div class="bg-gradient-to-br from-gray-50 to-white border-2 border-gray-300 rounded-lg p-4">
                        <div class="font-bold text-gray-700 mb-1">Mid Season</div>
                        <div class="text-xs text-gray-600">Jan - 14 Apr + 01 - 25 Sep</div>
                        <div class="text-xs text-gray-600">Nov + 01 - 20 Dec</div>
                    </div>
                    <div class="bg-gradient-to-br from-green-50 to-white border-2 border-green-300 rounded-lg p-4">
                        <div class="font-bold text-green-700 mb-1">Off-Season Rates</div>
                        <div class="text-xs text-gray-600">Rest of the year</div>
                        <div class="text-xs text-gray-600">Best value for budget travelers</div>
                    </div>
                </div>

                <!-- Pricing Cards Grid -->
                <div class="space-y-6">
                    <!-- Hatchback Cars -->
                    <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border-2 border-gray-200 overflow-hidden">
                        <div class="bg-gradient-to-r from-gray-100 to-gray-50 px-6 py-4 border-b-2 border-gray-200">
                            <h3 class="text-xl md:text-2xl font-bold text-gray-900">Hatchback Cars</h3>
                            <p class="text-sm text-gray-600 mt-1">Alto, Alto K10</p>
                        </div>
                        <div class="p-6">
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div class="text-center p-4 bg-primary-50 rounded-lg border border-primary-200">
                                    <div class="text-xs text-primary-700 font-semibold mb-1">SEASON RATES</div>
                                    <div class="text-3xl font-bold text-primary-600">₹3,000</div>
                                    <div class="text-xs text-gray-500 mt-1">per day</div>
                                </div>
                                <div class="text-center p-4 bg-gray-50 rounded-lg border border-gray-200">
                                    <div class="text-xs text-gray-700 font-semibold mb-1">MID SEASON</div>
                                    <div class="text-3xl font-bold text-gray-700">₹2,500</div>
                                    <div class="text-xs text-gray-500 mt-1">per day</div>
                                </div>
                                <div class="text-center p-4 bg-green-50 rounded-lg border border-green-200">
                                    <div class="text-xs text-green-700 font-semibold mb-1">OFF-SEASON</div>
                                    <div class="text-3xl font-bold text-green-600">₹2,200</div>
                                    <div class="text-xs text-gray-500 mt-1">per day</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sedan Cars -->
                    <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border-2 border-gray-200 overflow-hidden">
