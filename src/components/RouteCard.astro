---
interface Props {
  from: string;
  to: string;
  distance: string;
  duration: string;
  price: string;
  image: string;
  description: string;
  href?: string;
}

const { from, to, distance, duration, price, image, description, href = '#' } = Astro.props;
---

<div class="group bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 border border-gray-200 hover:border-primary-500">
  <!-- Image Section -->
  <a href={href} class="block relative h-48 overflow-hidden cursor-pointer">
    <img
      src={image}
      alt={`${from} to ${to}`}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>

    <!-- Price Badge -->
    <div class="absolute top-4 right-4 bg-primary-500 text-black px-4 py-2 rounded-lg shadow-lg">
      <p class="text-sm font-semibold">Starting from</p>
      <p class="text-2xl font-bold">{price}</p>
    </div>
  </a>

  <!-- Content Section -->
  <div class="p-6">
    <!-- Route Title -->
    <h3 class="text-xl font-bold text-gray-900 mb-3 flex items-center">
      {from ? (
        <>
          <span>{from}</span>
          <svg class="w-5 h-5 mx-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
          <span>{to}</span>
        </>
      ) : (
        <span>{to}</span>
      )}
    </h3>

    <!-- Route Details -->
    <div class="flex items-center gap-4 mb-3 text-sm text-gray-600">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span class="font-medium">{distance}</span>
      </div>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="font-medium">{duration}</span>
      </div>
    </div>

    <!-- Description -->
    <p class="text-sm text-gray-600 mb-4 leading-relaxed">
      {description}
    </p>

    <!-- Features -->
    <div class="flex items-center gap-2 mb-4 flex-wrap">
      <span class="inline-flex items-center text-xs bg-green-50 text-green-700 px-2 py-1 rounded-full">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        Fixed Price
      </span>
      <span class="inline-flex items-center text-xs bg-blue-50 text-blue-700 px-2 py-1 rounded-full">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        Clean Cars
      </span>
      <span class="inline-flex items-center text-xs bg-purple-50 text-purple-700 px-2 py-1 rounded-full">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        Expert Drivers
      </span>
    </div>

    <!-- CTA Button -->
    <a
      href={href}
      class="block w-full bg-secondary-900 text-white text-center px-4 py-3 rounded-lg font-semibold hover:bg-secondary-800 transition-colors"
    >
      View Details
      <svg class="w-4 h-4 ml-1.5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </a>
  </div>
</div>
