---
import { isAdminAuthenticated } from '../../lib/admin-auth'
import { getAllBookings, urlFor } from '../../lib/sanity'
import '../../styles/global.css'

export const prerender = false

// Check authentication
if (!isAdminAuthenticated(Astro.cookies)) {
  return Astro.redirect('/admin/login')
}

// Fetch bookings needing payment verification
const allBookings = await getAllBookings()
const pendingVerification = allBookings.filter(b => b.paymentStatus === 'screenshot_uploaded')
const pendingPayments = allBookings.filter(b => b.paymentStatus === 'pending')
const recentVerified = allBookings
  .filter(b => b.paymentStatus === 'verified')
  .slice(0, 10)

const pageTitle = 'Payment Verification - Admin Dashboard'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>
  </head>

  <body class="antialiased bg-gray-100 min-h-screen">
    <!-- Admin Header -->
    <header class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div class="flex items-center gap-4">
            <h1 class="text-xl font-bold text-gray-900">Kathgodam Taxi Admin</h1>
          </div>
          <div class="flex items-center gap-4">
            <a href="/" target="_blank" class="text-sm text-gray-500 hover:text-gray-700">
              View Site →
            </a>
            <a href="/studio" target="_blank" class="text-sm text-amber-600 hover:text-amber-700">
              Sanity Studio
            </a>
            <form method="POST" action="/admin/logout" class="inline">
              <button type="submit" class="text-sm text-red-600 hover:text-red-700">
                Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </header>

    <!-- Navigation -->
    <nav class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex gap-6">
          <a href="/admin" class="py-3 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">
            Dashboard
          </a>
          <a href="/admin/bookings" class="py-3 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">
            Bookings
          </a>
          <a href="/admin/payments" class="py-3 border-b-2 border-amber-500 text-amber-600 font-medium text-sm relative">
            Payments
            {pendingVerification.length > 0 && (
              <span class="absolute -top-1 -right-2 bg-red-500 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center">
                {pendingVerification.length}
              </span>
            )}
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Pending Verification Section -->
      <div class="mb-8">
        <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <span class="w-3 h-3 bg-blue-500 rounded-full"></span>
          Pending Verification ({pendingVerification.length})
        </h2>

        {pendingVerification.length > 0 ? (
          <div class="grid gap-4 md:grid-cols-2">
            {pendingVerification.map((booking) => (
              <div class="bg-white rounded-lg shadow p-6">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <a href={`/admin/bookings/${booking.bookingId}`} class="font-mono text-lg font-bold text-amber-600 hover:text-amber-700">
                      {booking.bookingId}
                    </a>
                    <p class="text-sm text-gray-500">
                      {new Date(booking._createdAt).toLocaleString('en-IN')}
                    </p>
                  </div>
                  <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
                    Screenshot Uploaded
                  </span>
                </div>

                <div class="space-y-2 mb-4">
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-500">Customer</span>
                    <span class="font-medium">{booking.customerName}</span>
                  </div>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-500">Phone</span>
                    <a href={`tel:${booking.customerPhone}`} class="font-medium text-amber-600">{booking.customerPhone}</a>
                  </div>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-500">Amount</span>
                    <span class="font-bold text-lg">₹{booking.totalAmount?.toLocaleString('en-IN')}</span>
                  </div>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-500">Travel Date</span>
                    <span class="font-medium">{booking.travelDate}</span>
                  </div>
                </div>

                {booking.paymentScreenshot && (
                  <div class="mb-4">
                    <p class="text-sm text-gray-500 mb-2">Payment Screenshot:</p>
                    <a href={urlFor(booking.paymentScreenshot).url()} target="_blank" class="block">
                      <img
                        src={urlFor(booking.paymentScreenshot).width(400).url()}
                        alt="Payment screenshot"
                        class="w-full rounded-lg border border-gray-200 hover:border-amber-500 transition-colors"
                      />
                    </a>
                  </div>
                )}

                <div class="flex gap-2">
                  <button
                    type="button"
                    data-action="verify"
                    data-booking-id={booking.bookingId}
                    class="flex-1 px-4 py-2 bg-green-500 text-white font-medium rounded-lg hover:bg-green-600 transition-colors text-sm verify-btn"
                  >
                    ✓ Verify Payment
                  </button>
                  <button
                    type="button"
                    data-action="reject"
                    data-booking-id={booking.bookingId}
                    class="flex-1 px-4 py-2 bg-red-500 text-white font-medium rounded-lg hover:bg-red-600 transition-colors text-sm reject-btn"
                  >
                    ✕ Reject
                  </button>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="bg-white rounded-lg shadow p-8 text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">All Caught Up!</h3>
            <p class="text-gray-600">No payments pending verification</p>
          </div>
        )}
      </div>

      <!-- Awaiting Payment Section -->
      <div class="mb-8">
        <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
          Awaiting Payment ({pendingPayments.length})
        </h2>

        {pendingPayments.length > 0 ? (
          <div class="bg-white rounded-lg shadow overflow-hidden">
            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Booking ID</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Customer</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Travel Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Booked</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                {pendingPayments.map((booking) => (
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">
                      <a href={`/admin/bookings/${booking.bookingId}`} class="font-mono text-amber-600 hover:text-amber-700 font-medium">
                        {booking.bookingId}
                      </a>
                    </td>
                    <td class="px-6 py-4">
                      <p class="font-medium">{booking.customerName}</p>
                      <p class="text-sm text-gray-500">{booking.customerPhone}</p>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      {booking.travelDate}
                    </td>
                    <td class="px-6 py-4 font-bold">
                      ₹{booking.totalAmount?.toLocaleString('en-IN')}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                      {new Date(booking._createdAt).toLocaleDateString('en-IN')}
                    </td>
                    <td class="px-6 py-4">
                      <a
                        href={`https://wa.me/91${booking.customerPhone}?text=Hi ${booking.customerName}, your booking ${booking.bookingId} is pending payment of ₹${booking.totalAmount}. Please complete the payment to confirm.`}
                        target="_blank"
                        class="text-green-600 hover:text-green-700 text-sm font-medium"
                      >
                        Send Reminder →
                      </a>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div class="bg-gray-50 rounded-lg p-4 text-center text-gray-500">
            No bookings awaiting payment
          </div>
        )}
      </div>

      <!-- Recently Verified -->
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
          <span class="w-3 h-3 bg-green-500 rounded-full"></span>
          Recently Verified
        </h2>

        {recentVerified.length > 0 ? (
          <div class="bg-white rounded-lg shadow overflow-hidden">
            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Booking ID</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Customer</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Travel Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                {recentVerified.map((booking) => (
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">
                      <a href={`/admin/bookings/${booking.bookingId}`} class="font-mono text-amber-600 hover:text-amber-700 font-medium">
                        {booking.bookingId}
                      </a>
                    </td>
                    <td class="px-6 py-4">
                      <p class="font-medium">{booking.customerName}</p>
                    </td>
                    <td class="px-6 py-4 font-bold text-green-600">
                      ₹{booking.totalAmount?.toLocaleString('en-IN')}
                    </td>
                    <td class="px-6 py-4">
                      {booking.travelDate}
                    </td>
                    <td class="px-6 py-4">
                      <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">
                        Paid
                      </span>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div class="bg-gray-50 rounded-lg p-4 text-center text-gray-500">
            No verified payments yet
          </div>
        )}
      </div>
    </main>

    <script>
      document.querySelectorAll('.verify-btn, .reject-btn').forEach(btn => {
        btn.addEventListener('click', async function() {
          const action = this.getAttribute('data-action');
          const bookingId = this.getAttribute('data-booking-id');

          if (!confirm(`Are you sure you want to ${action} payment for ${bookingId}?`)) {
            return;
          }

          const button = this as HTMLButtonElement;
          button.disabled = true;
          button.textContent = 'Processing...';

          try {
            const response = await fetch('/api/admin/verify-payment', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                bookingId,
                action: action === 'verify' ? 'verified' : 'rejected'
              })
            });

            const data = await response.json();

            if (data.success) {
              window.location.reload();
            } else {
              alert(data.error || 'Failed to update payment status');
              button.disabled = false;
              button.textContent = action === 'verify' ? '✓ Verify Payment' : '✕ Reject';
            }
          } catch (error) {
            alert('Network error. Please try again.');
            button.disabled = false;
            button.textContent = action === 'verify' ? '✓ Verify Payment' : '✕ Reject';
          }
        });
      });
    </script>
  </body>
</html>
