---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import PreviewBanner from '../components/PreviewBanner.astro'
import TemplesHero from '../components/TemplesHero.astro'
import CategoryJumpNav from '../components/CategoryJumpNav.astro'
import TempleFilterBar from '../components/TempleFilterBar.astro'
import TempleCategorySection from '../components/TempleCategorySection.astro'
import { getTemplesPage, getSiteSettings, urlFor } from '../lib/sanity'
import '../styles/global.css'

// Mark as server-rendered for preview support
export const prerender = true

// Prerendered pages always show published content (no preview mode)
const isPreview = false

// Fetch temples page data
const templesPage = await getTemplesPage(isPreview)
const siteSettings = await getSiteSettings()

// Fallback if no data - show empty state rather than 404
const pageTitle = templesPage?.pageTitle || 'Sacred Temples of Kumaon'
const metaDescription = templesPage?.metaDescription || 'Explore the sacred temples of Kumaon Hills. Book reliable taxi services to visit ancient temples and spiritual destinations.'
const keywords = templesPage?.keywords || 'Kumaon temples, temple tour taxi, spiritual tourism Uttarakhand'

const heroBackgroundImage = templesPage?.heroImage
  ? urlFor(templesPage.heroImage).width(1920).height(600).url()
  : undefined

// Transform temple categories and their temples
const categories = templesPage?.templeCategories?.map((category: any) => ({
  categoryName: category.categoryName,
  categorySlug: category.categorySlug,
  categoryDescription: category.categoryDescription,
  icon: category.icon,
  temples: category.temples?.filter((temple: any) => temple !== null).map((temple: any) => ({
    _id: temple._id,
    name: temple.name,
    slug: temple.slug,
    subtitle: temple.subtitle,
    district: temple.district,
    templeType: temple.templeType,
    introText: temple.introText,
    highlights: temple.highlights?.slice(0, 3) || [],
    featuredImage: temple.featuredImage,
    heroSlides: temple.heroSlides,
  })) || [],
})) || []

// Get WhatsApp details for CTAs
const whatsappNumber = siteSettings?.whatsappNumber || '917351721351'
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent('Hi, I need a taxi for a temple tour.')}`
const phoneNumber = siteSettings?.phone || '7351721351'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={metaDescription} />
    {keywords && <meta name="keywords" content={keywords} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>

  <body class="antialiased">
    <!-- Preview Banner -->
    <PreviewBanner show={isPreview} />

    <!-- Navbar -->
    <Navbar />

    <!-- Main Content -->
    <main>
      <!-- Hero Section -->
      <TemplesHero
        title={templesPage?.heroTitle || 'Sacred Temples of Kumaon'}
        subtitle={templesPage?.heroSubtitle || 'Discover ancient temples, spiritual ashrams, and sacred sites across the Kumaon Hills.'}
        badge={templesPage?.heroBadge || 'Spiritual Destinations'}
        backgroundImage={heroBackgroundImage}
      />

      <!-- Introduction -->
      {templesPage?.introText && (
        <section class="py-8 bg-white border-b border-gray-200">
          <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <p class="text-lg text-gray-700 leading-relaxed">
              {templesPage.introText}
            </p>
          </div>
        </section>
      )}

      <!-- Filter Bar -->
      {templesPage?.showFilters && (
        <TempleFilterBar
          showDistrictFilter={templesPage.filterByDistrictEnabled}
          showTypeFilter={templesPage.filterByTypeEnabled}
        />
      )}

      <!-- Category Jump Navigation -->
      {templesPage?.showCategoryNav && categories.length > 1 && (
        <CategoryJumpNav
          categories={categories.map((c: any) => ({
            categoryName: c.categoryName,
            categorySlug: c.categorySlug,
            icon: c.icon,
          }))}
          title={templesPage?.categoryNavTitle || 'Browse by Category'}
        />
      )}

      <!-- Temple Category Sections -->
      {categories.length > 0 ? (
        categories.map((category: any, index: number) => (
          <TempleCategorySection
            categoryName={category.categoryName}
            categorySlug={category.categorySlug}
            categoryDescription={category.categoryDescription}
            icon={category.icon}
            temples={category.temples}
            isFirst={index === 0}
          />
        ))
      ) : (
        <section class="py-20 bg-white">
          <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <svg class="w-20 h-20 text-gray-300 mx-auto mb-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L4 7v2h16V7L12 2zm0 2.5l4 2.5H8l4-2.5zM4 10v2h2v8H4v2h16v-2h-2v-8h2v-2H4zm4 2h8v8H8v-8zm2 2v4h4v-4h-4z"/>
            </svg>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Temples Coming Soon</h2>
            <p class="text-gray-600 mb-8">
              We're currently adding temples to our database. Please check back soon or contact us for temple tour inquiries.
            </p>
            <a
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-whatsapp text-white px-6 py-3 rounded-lg font-bold hover:bg-green-600 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347"/>
              </svg>
              Contact Us for Temple Tours
            </a>
          </div>
        </section>
      )}

      <!-- Additional Information Section -->
      {templesPage?.showAdditionalInfo && templesPage?.additionalInfoPoints && (
        <section class="py-12 bg-gray-50">
          <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">
              {templesPage.additionalInfoTitle || 'Temple Visiting Tips'}
            </h2>
            <ul class="space-y-3">
              {templesPage.additionalInfoPoints.map((point: string) => (
                <li class="flex items-start gap-3">
                  <svg
                    class="w-6 h-6 text-primary-500 flex-shrink-0 mt-0.5"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-gray-700">{point}</span>
                </li>
              ))}
            </ul>
          </div>
        </section>
      )}

      <!-- Bottom CTA Section -->
      <section class="py-12 bg-gradient-to-r from-secondary-900 via-black to-secondary-900 text-white">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            {templesPage?.bottomCtaHeading || 'Plan Your Temple Tour'}
          </h2>
          <p class="text-xl text-gray-300 mb-8">
            {templesPage?.bottomCtaText || 'Let us help you plan a customized temple tour covering multiple sacred sites in Kumaon.'}
          </p>
          <div class="flex flex-col sm:flex-row gap-3 justify-center">
            <a
              href="/contact"
              class="inline-flex items-center justify-center bg-primary-500 text-black px-8 py-3 rounded-lg font-bold hover:bg-primary-400 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
            >
              Submit Query
              <svg
                class="w-5 h-5 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"
                />
              </svg>
            </a>
            <a
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center bg-white text-black px-8 py-3 rounded-lg font-bold hover:bg-gray-100 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
            >
              WhatsApp Us
              <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347"/>
              </svg>
            </a>
            <a
              href={`tel:+91${phoneNumber}`}
              class="inline-flex items-center justify-center bg-secondary-700 text-white px-8 py-3 rounded-lg font-bold hover:bg-secondary-600 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                />
              </svg>
              Call Now
            </a>
          </div>
        </div>
      </section>

      <!-- FAQs Section -->
      {templesPage?.faqs && templesPage.faqs.length > 0 && (
        <section class="py-12 bg-white">
          <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
              Frequently Asked Questions
            </h2>
            <div class="space-y-4">
              {templesPage.faqs.map((faq: any) => (
                <details class="bg-gray-50 rounded-lg p-6 group">
                  <summary class="font-bold text-gray-900 cursor-pointer list-none flex items-center justify-between">
                    <span>{faq.question}</span>
                    <svg
                      class="w-5 h-5 text-primary-500 group-open:rotate-180 transition-transform"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 9l-7 7-7-7"
                      />
                    </svg>
                  </summary>
                  <div class="mt-4 text-gray-700 prose" set:html={faq.answer} />
                </details>
              ))}
            </div>
          </div>
        </section>
      )}
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Floating WhatsApp Button -->
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-6 right-6 z-50 bg-[#25d366] text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg hover:shadow-2xl hover:scale-110 transition-all duration-300 animate-pulse-slow"
      aria-label="Chat on WhatsApp"
    >
      <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347"/>
      </svg>
    </a>

    <style>
      html {
        scroll-behavior: smooth;
      }

      main {
        margin-top: 64px;
      }

      @media (min-width: 768px) {
        main {
          margin-top: 80px;
        }
      }

      @keyframes pulse-slow {
        0%,
        100% {
          transform: scale(1);
          opacity: 1;
        }
        50% {
          transform: scale(1.05);
          opacity: 0.9;
        }
      }

      .animate-pulse-slow {
        animation: pulse-slow 2s ease-in-out infinite;
      }
    </style>
  </body>
</html>
