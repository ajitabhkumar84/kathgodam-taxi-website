---
interface Props {
  packageName: string;
  showOnlineBooking?: boolean;
  phoneNumber?: string;
  whatsappNumber?: string;
}

const {
  packageName,
  showOnlineBooking = false,
  phoneNumber = '7351721351',
  whatsappNumber = '917351721351'
} = Astro.props;

const baseWhatsappUrl = `https://wa.me/${whatsappNumber}`;
const whatsappMessage = encodeURIComponent(`Hi, I want to book ${packageName}`);
---

<section class="py-16 lg:py-20 bg-gradient-to-br from-primary-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        How to <span class="text-primary-600">Book</span>
      </h2>
      <p class="text-lg text-gray-600">
        Simple 3-step booking process
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <!-- Step 1: Contact Us -->
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-600 text-white rounded-full text-2xl font-bold mb-4">
          1
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Contact Us</h3>
        <p class="text-gray-600">
          Call us at <strong>{phoneNumber}</strong> or WhatsApp your requirements
        </p>
      </div>

      <!-- Step 2: Confirm Details -->
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-600 text-white rounded-full text-2xl font-bold mb-4">
          2
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Confirm Details</h3>
        <p class="text-gray-600">
          Share your travel date, pickup location, and preferred vehicle
        </p>
      </div>

      <!-- Step 3: Enjoy Your Tour -->
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-600 text-white rounded-full text-2xl font-bold mb-4">
          3
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Enjoy Your Tour</h3>
        <p class="text-gray-600">
          Relax and experience the best of Uttarakhand with our professional service
        </p>
      </div>
    </div>

    <!-- CTA Buttons -->
    <div class="mt-12 text-center">
      <div class="inline-flex flex-col sm:flex-row gap-4">
        <!-- Call Now Button -->
        <a
          href={`tel:${phoneNumber}`}
          class="inline-flex items-center justify-center gap-2 bg-secondary-900 text-primary-500 px-8 py-4 rounded-lg font-bold hover:bg-secondary-800 transition-all shadow-xl hover:shadow-2xl hover:scale-105"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          Call Now: {phoneNumber}
        </a>

        <!-- WhatsApp Button -->
        <a
          href={`${baseWhatsappUrl}?text=${whatsappMessage}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-2 bg-[#25d366] text-white px-8 py-4 rounded-lg font-bold hover:bg-[#1fb855] transition-all shadow-xl hover:shadow-2xl hover:scale-105"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          WhatsApp Us
        </a>

        <!-- Book Online Button (conditional) -->
        {showOnlineBooking && (
          <button
            id="open-package-booking-modal-btn"
            class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-primary-600 to-orange-600 text-white px-8 py-4 rounded-lg font-bold hover:from-primary-700 hover:to-orange-700 transition-all shadow-xl hover:shadow-2xl hover:scale-105"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Book Online
          </button>
        )}
      </div>
    </div>

    <!-- Additional Info -->
    {showOnlineBooking && (
      <div class="mt-8 text-center">
        <p class="text-sm text-gray-600">
          Book online with instant confirmation and secure payment options
        </p>
      </div>
    )}
  </div>
</section>

<style>
  /* Add subtle animation for buttons */
  @keyframes pulse-subtle {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.9;
    }
  }
</style>
