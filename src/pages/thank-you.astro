---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import WhatsAppFAB from '../components/WhatsAppFAB.astro'
import PreviewBanner from '../components/PreviewBanner.astro'
import { getSiteSettings } from '../lib/sanity'
import '../styles/global.css'

// Mark as server-rendered for preview support
export const prerender = false

// Check preview mode
const isPreview = Astro.cookies.get('preview-mode')?.value === 'true'

// Fetch site settings
const siteSettings = await getSiteSettings()

// Contact details
const whatsappNumber = siteSettings?.whatsappNumber || '917351721351'
const phoneNumber = siteSettings?.phone || '7351721351'

// WhatsApp URL
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent('Hi, I just submitted a booking request and wanted to follow up.')}`

// Page metadata
const pageTitle = 'Thank You - Kathgodam Taxi Services'
const metaDescription =
  'Thank you for your booking request. We will contact you shortly with a quote and confirmation.'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={metaDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>

    <!-- Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Prevent indexing of thank you page -->
    <meta name="robots" content="noindex, nofollow" />
  </head>

  <body class="antialiased">
    <!-- Preview Banner -->
    <PreviewBanner show={isPreview} />

    <!-- Navbar -->
    <Navbar />

    <!-- Main Content -->
    <main>
      <!-- Success Section -->
      <section
        class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-50 via-white to-yellow-50 px-4"
      >
        <div class="max-w-2xl mx-auto text-center py-20">
          <!-- Success Icon Animation -->
          <div class="mb-8 relative">
            <div
              class="w-32 h-32 mx-auto bg-gradient-to-r from-primary-500 to-yellow-500 rounded-full flex items-center justify-center animate-scale-in shadow-2xl"
            >
              <svg
                class="w-20 h-20 text-black animate-check"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="3"
                  d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <!-- Confetti Effect -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div
                class="w-2 h-2 bg-primary-500 rounded-full animate-confetti-1"
              >
              </div>
              <div
                class="w-2 h-2 bg-yellow-500 rounded-full animate-confetti-2"
              >
              </div>
              <div
                class="w-2 h-2 bg-primary-500 rounded-full animate-confetti-3"
              >
              </div>
              <div
                class="w-2 h-2 bg-yellow-500 rounded-full animate-confetti-4"
              >
              </div>
            </div>
          </div>

          <!-- Heading -->
          <h1
            class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 animate-fade-in-up"
          >
            Thank You for Your Request!
          </h1>

          <div
            class="text-6xl mb-6 animate-fade-in-up animation-delay-100"
            aria-hidden="true"
          >
            üéâ
          </div>

          <!-- Message -->
          <div
            class="bg-white rounded-2xl shadow-xl p-8 mb-8 border-2 border-primary-200 animate-fade-in-up animation-delay-200"
          >
            <p class="text-xl text-gray-700 mb-4">
              We've received your booking request and sent a confirmation
              email to your inbox.
            </p>
            <div class="bg-amber-50 border-l-4 border-amber-500 p-4 mb-4">
              <p class="text-sm text-amber-800 font-semibold mb-2">‚ö†Ô∏è Important: Payment Required for Confirmation</p>
              <p class="text-sm text-amber-700">
                Your booking will be <strong>CONFIRMED</strong> only after you pay the token advance amount and share the payment screenshot via WhatsApp or email. We will verify and confirm within a few hours.
              </p>
            </div>
            <p class="text-lg text-gray-600">
              Check your email for payment details and next steps.
            </p>
          </div>

          <!-- Next Steps -->
          <div
            class="bg-gradient-to-r from-secondary-900 to-black rounded-2xl p-8 mb-8 text-white animate-fade-in-up animation-delay-300"
          >
            <h2 class="text-2xl font-bold mb-4">Next Steps to Confirm Your Booking</h2>
            <div class="space-y-3 text-left max-w-md mx-auto">
              <div class="flex items-start">
                <div
                  class="flex-shrink-0 w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center text-black font-bold mr-3"
                >
                  1
                </div>
                <p class="text-gray-200">
                  <strong>Check your email</strong> for booking details and payment instructions
                </p>
              </div>
              <div class="flex items-start">
                <div
                  class="flex-shrink-0 w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center text-black font-bold mr-3"
                >
                  2
                </div>
                <p class="text-gray-200">
                  <strong>Pay the token advance</strong> using UPI (details in email)
                </p>
              </div>
              <div class="flex items-start">
                <div
                  class="flex-shrink-0 w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center text-black font-bold mr-3"
                >
                  3
                </div>
                <p class="text-gray-200">
                  <strong>Share payment screenshot</strong> via WhatsApp or reply to the email
                </p>
              </div>
              <div class="flex items-start">
                <div
                  class="flex-shrink-0 w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center text-black font-bold mr-3"
                >
                  4
                </div>
                <p class="text-gray-200">
                  <strong>Get confirmation</strong> - We'll verify and confirm your booking within a few hours
                </p>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div
            class="flex flex-col sm:flex-row gap-4 justify-center mb-8 animate-fade-in-up animation-delay-400"
          >
            <a
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center bg-whatsapp text-white px-8 py-4 rounded-lg font-bold hover:bg-green-600 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
            >
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                ></path>
              </svg>
              Chat on WhatsApp
            </a>
            <a
              href={`tel:+91${phoneNumber}`}
              class="inline-flex items-center justify-center bg-primary-500 text-black px-8 py-4 rounded-lg font-bold hover:bg-primary-400 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
            >
              <svg
                class="w-6 h-6 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              Call Now
            </a>
            <a
              href="/"
              class="inline-flex items-center justify-center bg-white text-black px-8 py-4 rounded-lg font-bold hover:bg-gray-100 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1 border-2 border-gray-200"
            >
              <svg
                class="w-6 h-6 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                ></path>
              </svg>
              Back to Home
            </a>
          </div>

          <!-- Trust Signals -->
          <div
            class="flex flex-wrap justify-center gap-6 text-sm text-gray-600 animate-fade-in-up animation-delay-500"
          >
            <div class="flex items-center">
              <svg
                class="w-5 h-5 text-primary-500 mr-2"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              15+ Years Experience
            </div>
            <div class="flex items-center">
              <svg
                class="w-5 h-5 text-primary-500 mr-2"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              24/7 Support
            </div>
            <div class="flex items-center">
              <svg
                class="w-5 h-5 text-primary-500 mr-2"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              Fixed Pricing
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <Footer />

    <!-- WhatsApp FAB -->
    <WhatsAppFAB />

    <style>
      html {
        scroll-behavior: smooth;
      }

      main {
        margin-top: 64px;
      }

      @media (min-width: 768px) {
        main {
          margin-top: 80px;
        }
      }

      @keyframes scale-in {
        from {
          transform: scale(0);
          opacity: 0;
        }
        to {
          transform: scale(1);
          opacity: 1;
        }
      }

      @keyframes check {
        0% {
          stroke-dasharray: 0 100;
        }
        100% {
          stroke-dasharray: 100 100;
        }
      }

      @keyframes fade-in-up {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes confetti-1 {
        0% {
          transform: translate(0, 0) rotate(0deg);
          opacity: 1;
        }
        100% {
          transform: translate(100px, 200px) rotate(360deg);
          opacity: 0;
        }
      }

      @keyframes confetti-2 {
        0% {
          transform: translate(0, 0) rotate(0deg);
          opacity: 1;
        }
        100% {
          transform: translate(-100px, 200px) rotate(-360deg);
          opacity: 0;
        }
      }

      @keyframes confetti-3 {
        0% {
          transform: translate(0, 0) rotate(0deg);
          opacity: 1;
        }
        100% {
          transform: translate(120px, -150px) rotate(180deg);
          opacity: 0;
        }
      }

      @keyframes confetti-4 {
        0% {
          transform: translate(0, 0) rotate(0deg);
          opacity: 1;
        }
        100% {
          transform: translate(-120px, -150px) rotate(-180deg);
          opacity: 0;
        }
      }

      .animate-scale-in {
        animation: scale-in 0.5s ease-out;
      }

      .animate-check {
        animation: check 0.5s ease-out 0.3s both;
      }

      .animate-fade-in-up {
        animation: fade-in-up 0.6s ease-out both;
      }

      .animation-delay-100 {
        animation-delay: 0.1s;
      }

      .animation-delay-200 {
        animation-delay: 0.2s;
      }

      .animation-delay-300 {
        animation-delay: 0.3s;
      }

      .animation-delay-400 {
        animation-delay: 0.4s;
      }

      .animation-delay-500 {
        animation-delay: 0.5s;
      }

      .animate-confetti-1 {
        animation: confetti-1 1.5s ease-out 0.5s both;
      }

      .animate-confetti-2 {
        animation: confetti-2 1.5s ease-out 0.6s both;
      }

      .animate-confetti-3 {
        animation: confetti-3 1.5s ease-out 0.7s both;
      }

      .animate-confetti-4 {
        animation: confetti-4 1.5s ease-out 0.8s both;
      }
    </style>
  </body>
</html>
