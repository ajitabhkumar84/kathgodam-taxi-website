---
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import TrustSignals from '../components/TrustSignals.astro';
import TourShelf from '../components/TourShelf.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

// Popular Day Trips Data
const popularTours = [
  {
    title: 'Nainital Day Tour',
    price: 'Starts from ₹1,200',
    image: 'https://images.unsplash.com/photo-1605640840605-14ac1855827b?q=80&w=2071&auto=format&fit=crop',
    href: '#'
  },
  {
    title: 'Kainchi Dham Visit',
    price: 'Starts from ₹1,200',
    image: 'https://images.unsplash.com/photo-1582510003544-4d00b7f74220?q=80&w=2070&auto=format&fit=crop',
    href: '#'
  },
  {
    title: 'Mukteshwar Tour',
    price: 'Starts from ₹2,500',
    image: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?q=80&w=2070&auto=format&fit=crop',
    href: '#'
  },
  {
    title: 'Bhimtal & Naukuchiatal',
    price: 'Starts from ₹2,000',
    image: 'https://images.unsplash.com/photo-1559827260-dc66d52bef19?q=80&w=2070&auto=format&fit=crop',
    href: '#'
  }
];

// Destinations Data
const destinations = [
  {
    title: 'Ranikhet Tour',
    price: 'Starts from ₹2,800',
    image: 'https://images.unsplash.com/photo-1563979266-f7a97b3e2d05?q=80&w=2070&auto=format&fit=crop',
    href: '#'
  },
  {
    title: 'Kausani Tour',
    price: 'Starts from ₹4,000',
    image: 'https://images.unsplash.com/photo-1540979388789-6cee28a1cdc9?q=80&w=2070&auto=format&fit=crop',
    href: '#'
  },
  {
    title: 'Jageshwar Dham',
    price: 'Starts from ₹3,500',
    image: 'https://images.unsplash.com/photo-1548013146-72479768bada?q=80&w=2076&auto=format&fit=crop',
    href: '#'
  },
  {
    title: 'Patal Bhuvaneshwar',
    price: 'Starts from ₹5,000',
    image: 'https://images.unsplash.com/photo-1523906630133-f6934a1ab2b9?q=80&w=2070&auto=format&fit=crop',
    href: '#'
  }
];

const whatsappNumber = '917351721351';
const whatsappMessage = 'Hi, I would like to book a taxi from Kathgodam.';
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Kathgodam Taxi - Your trusted taxi partner for the Kumaon Hills. Safe drivers, transparent pricing, and unforgettable trips to Nainital, Mukteshwar, and beyond." />
    <meta name="keywords" content="Kathgodam taxi, Nainital taxi, Kumaon hills taxi, Mukteshwar taxi, Kainchi Dham taxi" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Kathgodam Taxi - Your Trusted Partner for Kumaon Hills | Safe & Affordable</title>

    <!-- Open Graph -->
    <meta property="og:title" content="Kathgodam Taxi - Your Trusted Partner for Kumaon Hills" />
    <meta property="og:description" content="Safe drivers, transparent pricing, and unforgettable trips to Nainital, Mukteshwar, and beyond." />
    <meta property="og:type" content="website" />

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="antialiased">
    <!-- Navbar -->
    <Navbar />

    <!-- Main Content -->
    <main>
      <!-- Hero Section -->
      <Hero />

      <!-- Trust Signals Bar -->
      <TrustSignals />

      <!-- Popular Tours Shelf -->
      <div id="tours">
        <TourShelf
          title="Our Most Popular Day Trips"
          subtitle="Explore the best of Kumaon with our curated day tours"
          tours={popularTours}
        />
      </div>

      <!-- Destinations Shelf -->
      <div class="bg-gray-50">
        <TourShelf
          title="Explore Kumaon"
          subtitle="Discover the hidden gems of the Himalayan foothills"
          tours={destinations}
        />
      </div>

      <!-- Why Choose Us Section -->
      <WhyChooseUs />

      <!-- Customer Reviews Section -->
      <TestimonialsSection />

      <!-- Final CTA Section -->
      <section class="py-16 bg-primary-600">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
            Ready to Explore the Kumaon Hills?
          </h2>
          <p class="text-xl text-primary-100 mb-8">
            Book your taxi today and experience the beauty of the Himalayas with our trusted service.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center bg-whatsapp text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-green-600 transition-colors shadow-lg"
            >
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Book on WhatsApp
            </a>
            <a
              href="tel:+917351721351"
              class="inline-flex items-center justify-center bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-colors shadow-lg"
            >
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Call Us Now
            </a>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Floating WhatsApp Button -->
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-6 right-6 z-50 bg-whatsapp text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg hover:shadow-xl hover:scale-110 transition-all duration-300"
      aria-label="Chat on WhatsApp"
    >
      <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
    </a>

    <style>
      /* Smooth scroll behavior */
      html {
        scroll-behavior: smooth;
      }

      /* Add spacing for fixed navbar */
      main {
        margin-top: 64px; /* Height of navbar on mobile */
      }

      @media (min-width: 768px) {
        main {
          margin-top: 80px; /* Height of navbar on desktop */
        }
      }

      /* Floating WhatsApp button animation */
      @keyframes pulse-scale {
        0%, 100% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.05);
        }
      }

      .fixed.bottom-6.right-6 {
        animation: pulse-scale 2s ease-in-out infinite;
      }
    </style>
  </body>
</html>
