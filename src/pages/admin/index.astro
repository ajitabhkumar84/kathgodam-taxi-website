---
import { isAdminAuthenticated } from '../../lib/admin-auth'
import { getAllBookings, getAllVehicles } from '../../lib/sanity'
import '../../styles/global.css'

export const prerender = false

// Check authentication
if (!(await isAdminAuthenticated(Astro.cookies))) {
  return Astro.redirect('/admin/login')
}

// Fetch data
const allBookings = await getAllBookings()
const allVehicles = await getAllVehicles()

// Calculate stats
const today = new Date().toISOString().split('T')[0]

const stats = {
  totalBookings: allBookings.length,
  pendingPayments: allBookings.filter(b => b.paymentStatus === 'pending' || b.paymentStatus === 'screenshot_uploaded').length,
  confirmedBookings: allBookings.filter(b => b.status === 'confirmed').length,
  todayBookings: allBookings.filter(b => b.travelDate === today).length,
  activeVehicles: allVehicles.filter(v => v.isActive && !v.maintenanceMode).length,
  totalVehicles: allVehicles.length
}

// Recent bookings (last 5)
const recentBookings = allBookings.slice(0, 5)

// Status display mapping
const statusDisplay: Record<string, { label: string; color: string; bgColor: string }> = {
  pending: { label: 'Pending', color: 'text-yellow-700', bgColor: 'bg-yellow-100' },
  confirmed: { label: 'Confirmed', color: 'text-green-700', bgColor: 'bg-green-100' },
  in_progress: { label: 'In Progress', color: 'text-blue-700', bgColor: 'bg-blue-100' },
  completed: { label: 'Completed', color: 'text-gray-700', bgColor: 'bg-gray-100' },
  cancelled: { label: 'Cancelled', color: 'text-red-700', bgColor: 'bg-red-100' }
}

const paymentStatusDisplay: Record<string, { label: string; color: string }> = {
  pending: { label: 'Pending', color: 'text-yellow-600' },
  screenshot_uploaded: { label: 'Verify', color: 'text-blue-600' },
  verified: { label: 'Paid', color: 'text-green-600' },
  rejected: { label: 'Rejected', color: 'text-red-600' },
  refunded: { label: 'Refunded', color: 'text-purple-600' }
}

const pageTitle = 'Admin Dashboard - Kathgodam Taxi'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>
  </head>

  <body class="antialiased bg-gray-100 min-h-screen">
    <!-- Admin Header -->
    <header class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div class="flex items-center gap-4">
            <h1 class="text-xl font-bold text-gray-900">Kathgodam Taxi Admin</h1>
          </div>
          <div class="flex items-center gap-4">
            <a href="/" target="_blank" class="text-sm text-gray-500 hover:text-gray-700">
              View Site →
            </a>
            <a href="/studio" target="_blank" class="text-sm text-amber-600 hover:text-amber-700">
              Sanity Studio
            </a>
            <form method="POST" action="/admin/logout" class="inline">
              <button type="submit" class="text-sm text-red-600 hover:text-red-700">
                Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </header>

    <!-- Navigation -->
    <nav class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex gap-6">
          <a href="/admin" class="py-3 border-b-2 border-amber-500 text-amber-600 font-medium text-sm">
            Dashboard
          </a>
          <a href="/admin/bookings" class="py-3 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">
            Bookings
          </a>
          <a href="/admin/payments" class="py-3 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm relative">
            Payments
            {stats.pendingPayments > 0 && (
              <span class="absolute -top-1 -right-2 bg-red-500 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center">
                {stats.pendingPayments}
              </span>
            )}
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Stats Grid -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
        <div class="bg-white rounded-lg shadow p-4">
          <p class="text-sm text-gray-500">Total Bookings</p>
          <p class="text-2xl font-bold text-gray-900">{stats.totalBookings}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <p class="text-sm text-gray-500">Today's Trips</p>
          <p class="text-2xl font-bold text-blue-600">{stats.todayBookings}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <p class="text-sm text-gray-500">Confirmed</p>
          <p class="text-2xl font-bold text-green-600">{stats.confirmedBookings}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <p class="text-sm text-gray-500">Pending Payments</p>
          <p class="text-2xl font-bold text-amber-600">{stats.pendingPayments}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <p class="text-sm text-gray-500">Active Vehicles</p>
          <p class="text-2xl font-bold text-gray-900">{stats.activeVehicles}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <p class="text-sm text-gray-500">Total Fleet</p>
          <p class="text-2xl font-bold text-gray-900">{stats.totalVehicles}</p>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <a href="/admin/payments" class="bg-amber-50 border border-amber-200 rounded-lg p-4 hover:bg-amber-100 transition-colors">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-amber-500 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-amber-800">Verify Payments</p>
              <p class="text-sm text-amber-600">{stats.pendingPayments} pending</p>
            </div>
          </div>
        </a>

        <a href="/admin/bookings?status=confirmed" class="bg-green-50 border border-green-200 rounded-lg p-4 hover:bg-green-100 transition-colors">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-green-800">Upcoming Trips</p>
              <p class="text-sm text-green-600">{stats.confirmedBookings} confirmed</p>
            </div>
          </div>
        </a>

        <a href="/studio/structure/vehicle" target="_blank" class="bg-blue-50 border border-blue-200 rounded-lg p-4 hover:bg-blue-100 transition-colors">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-blue-800">Manage Fleet</p>
              <p class="text-sm text-blue-600">{stats.activeVehicles} active</p>
            </div>
          </div>
        </a>

        <a href="/studio/structure/bookingSettings" target="_blank" class="bg-purple-50 border border-purple-200 rounded-lg p-4 hover:bg-purple-100 transition-colors">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-purple-500 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="font-medium text-purple-800">Settings</p>
              <p class="text-sm text-purple-600">UPI, Policies</p>
            </div>
          </div>
        </a>
      </div>

      <!-- Recent Bookings -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
          <h2 class="text-lg font-semibold text-gray-900">Recent Bookings</h2>
          <a href="/admin/bookings" class="text-sm text-amber-600 hover:text-amber-700">View all →</a>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Booking ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Route</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payment</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              {recentBookings.length > 0 ? recentBookings.map((booking) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <a href={`/admin/bookings/${booking.bookingId}`} class="font-mono text-amber-600 hover:text-amber-700">
                      {booking.bookingId}
                    </a>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div>
                      <p class="font-medium text-gray-900">{booking.customerName}</p>
                      <p class="text-sm text-gray-500">{booking.customerPhone}</p>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <p class="text-sm text-gray-900">{booking.pickupLocation}</p>
                    <p class="text-sm text-gray-500">→ {booking.dropLocation}</p>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <p class="text-sm text-gray-900">{booking.travelDate}</p>
                    <p class="text-sm text-gray-500">{booking.pickupTime}</p>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class={`inline-block px-2 py-1 rounded-full text-xs font-medium ${statusDisplay[booking.status]?.bgColor} ${statusDisplay[booking.status]?.color}`}>
                      {statusDisplay[booking.status]?.label}
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class={`text-sm font-medium ${paymentStatusDisplay[booking.paymentStatus]?.color}`}>
                      {paymentStatusDisplay[booking.paymentStatus]?.label}
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap font-medium">
                    Rs.{booking.totalAmount?.toLocaleString('en-IN')}
                  </td>
                </tr>
              )) : (
                <tr>
                  <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                    No bookings yet
                  </td>
                </tr>
              )}
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </body>
</html>
