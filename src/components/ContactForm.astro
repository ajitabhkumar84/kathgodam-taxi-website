---
interface Props {
  formTitle?: string
  formDescription?: string
}

const {
  formTitle = 'Request a Free Quote',
  formDescription = "Fill out the form below and we'll get back to you within minutes",
} = Astro.props
---

<section class="py-12 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">
        {formTitle}
      </h2>
      <p class="text-lg text-gray-600">
        {formDescription}
      </p>
    </div>

    <form
      id="contact-form"
      class="bg-gray-50 rounded-2xl shadow-xl p-6 md:p-8 border border-gray-200"
    >
      <!-- Your Details Section -->
      <div class="mb-6">
        <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
          <svg
            class="w-6 h-6 text-primary-500 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
            ></path>
          </svg>
          Your Details
        </h3>
        <div class="grid grid-cols-1 gap-4">
          <div>
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
              Name <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
              placeholder="Enter your full name"
            />
          </div>
          <div>
            <label for="mobile" class="block text-sm font-semibold text-gray-700 mb-2">
              Mobile <span class="text-red-500">*</span>
            </label>
            <input
              type="tel"
              id="mobile"
              name="mobile"
              required
              pattern="[0-9]{10}"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
              placeholder="10-digit mobile number"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
              Email <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
              placeholder="your.email@example.com"
            />
            <p class="text-xs text-gray-500 mt-1">
              A copy of your responses will be emailed to the address you provided
            </p>
          </div>
        </div>
      </div>

      <!-- Tour Details Section -->
      <div class="mb-6">
        <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
          <svg
            class="w-6 h-6 text-primary-500 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Tour Details
        </h3>
        <div class="grid grid-cols-1 gap-4">
          <div>
            <label
              for="pickupPoint"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Pickup Point <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="pickupPoint"
              name="pickupPoint"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
              placeholder="e.g., Kathgodam, Pantnagar Airport, etc."
            />
          </div>
          <div>
            <label
              for="startingDate"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Starting Date <span class="text-red-500">*</span>
            </label>
            <input
              type="date"
              id="startingDate"
              name="startingDate"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
            />
            <p class="text-xs text-gray-500 mt-1">
              Please let us know the starting date when your tour starts
            </p>
          </div>
          <div>
            <label
              for="pickupTime"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Pickup Time or Train Name
            </label>
            <input
              type="text"
              id="pickupTime"
              name="pickupTime"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
              placeholder="e.g., 10:00 AM or Ranikhet Express"
            />
          </div>
          <div>
            <label
              for="endingDate"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Ending Date <span class="text-red-500">*</span>
            </label>
            <input
              type="date"
              id="endingDate"
              name="endingDate"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
            />
            <p class="text-xs text-gray-500 mt-1">
              Please let us know when your tour would end
            </p>
          </div>
        </div>
      </div>

      <!-- Your Car Category Section -->
      <div class="mb-6">
        <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
          <svg
            class="w-6 h-6 text-primary-500 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"
            ></path>
          </svg>
          Your Car Category
          <span class="text-red-500 ml-1">*</span>
        </h3>
        <div class="grid grid-cols-1 gap-4">
          <div>
            <label for="carCategory" class="block text-sm font-semibold text-gray-700 mb-2">
              Select Car Category <span class="text-red-500">*</span>
            </label>
            <select
              id="carCategory"
              name="carCategory"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
            >
              <option value="">-- Select a car category --</option>
              <option value="Sedan Car (Honda Amaze/Xcent)">Sedan Car â†’ Honda Amaze/Xcent</option>
              <option value="SUV Standard (Ertiga/Triber/Xylo/Tavera - 6 to 8 Pax)">SUV Standard (Ertiga/Triber/Xylo/Tavera - 6 to 8 Pax)</option>
              <option value="SUV Deluxe Innova (7 Pax)">SUV Deluxe Innova (7 Pax)</option>
              <option value="SUV Luxury Innova Crysta (7 Pax)">SUV Luxury Innova Crysta (7 Pax)</option>
              <option value="Tempo Traveler (12 or 17 Pax)">Tempo Traveler (12 or 17 Pax)</option>
              <option value="other">Other (Please specify)</option>
            </select>
          </div>

          <!-- Other Car Category Input (hidden by default) -->
          <div id="otherCarCategoryContainer" class="hidden">
            <label for="otherCarCategory" class="block text-sm font-semibold text-gray-700 mb-2">
              Please specify your vehicle requirement <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="otherCarCategory"
              name="otherCarCategory"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
              placeholder="E.g., Mini Bus, Luxury Coach, etc."
            />
          </div>
        </div>
      </div>

      <!-- Additional Requirements -->
      <div class="mb-6">
        <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
          Additional Requirements or Message
        </label>
        <textarea
          id="message"
          name="message"
          rows="5"
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all resize-none"
          placeholder="Please let us know your tentative itinerary that would help us in providing you with accurate information."
        ></textarea>
      </div>

      <!-- Submit Buttons -->
      <div class="flex flex-col sm:flex-row gap-3">
        <button
          type="submit"
          id="submit-button"
          class="flex-1 inline-flex items-center justify-center bg-primary-500 text-black px-8 py-4 rounded-lg font-bold hover:bg-primary-400 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1 disabled:opacity-50 disabled:cursor-not-allowed"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          <span id="submit-button-text">Submit Request (Email)</span>
        </button>
        <button
          type="button"
          id="whatsapp-button"
          class="flex-1 inline-flex items-center justify-center bg-whatsapp text-white px-8 py-4 rounded-lg font-bold hover:bg-green-600 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
            ></path>
          </svg>
          Send via WhatsApp
        </button>
      </div>

      <!-- Error Message -->
      <div id="form-error" class="hidden mt-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <div class="flex items-center">
          <svg
            class="w-6 h-6 text-red-500 mr-3"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
              clip-rule="evenodd"></path>
          </svg>
          <p class="text-red-800 font-semibold" id="error-message">
            Something went wrong. Please try again.
          </p>
        </div>
      </div>
    </form>
  </div>
</section>

<script>
  // Show/hide "Other" car category input
  const carCategorySelect = document.getElementById('carCategory') as HTMLSelectElement
  const otherCarCategoryContainer = document.getElementById('otherCarCategoryContainer')
  const otherCarCategoryInput = document.getElementById('otherCarCategory') as HTMLInputElement

  if (carCategorySelect) {
    carCategorySelect.addEventListener('change', (e) => {
      const target = e.target as HTMLSelectElement
      if (target.value === 'other') {
        otherCarCategoryContainer?.classList.remove('hidden')
        otherCarCategoryInput?.setAttribute('required', 'required')
      } else {
        otherCarCategoryContainer?.classList.add('hidden')
        otherCarCategoryInput?.removeAttribute('required')
        otherCarCategoryInput.value = ''
      }
    })
  }

  // Form submission handling
  const form = document.getElementById('contact-form') as HTMLFormElement
  const submitButton = document.getElementById('submit-button') as HTMLButtonElement
  const submitButtonText = document.getElementById('submit-button-text')
  const errorMessage = document.getElementById('form-error')
  const errorMessageText = document.getElementById('error-message')
  const whatsappButton = document.getElementById('whatsapp-button')

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault()

      // Disable submit button
      submitButton.disabled = true
      if (submitButtonText) {
        submitButtonText.textContent = 'Sending...'
      }

      try {
        // Fetch CSRF token
        const csrfRes = await fetch('/api/csrf-token')
        if (!csrfRes.ok) {
          throw new Error(`Failed to get CSRF token: ${csrfRes.status}`)
        }
        const csrfData = await csrfRes.json()
        const csrfToken = csrfData.csrfToken

        const formData = new FormData(form)

        const response = await fetch('/api/contact/submit', {
          method: 'POST',
          headers: { 'x-csrf-token': csrfToken },
          body: formData,
        })

        // Log response details for debugging
        console.log('Response status:', response.status)
        console.log('Response headers:', response.headers)

        // Check if response has content
        const responseText = await response.text()
        console.log('Response body:', responseText)

        // Try to parse as JSON
        let result
        try {
          result = JSON.parse(responseText)
        } catch (parseError) {
          console.error('Failed to parse response as JSON:', parseError)
          throw new Error(`Server returned invalid response (${response.status}): ${responseText.substring(0, 100)}`)
        }

        if (response.ok && result.success) {
          // Redirect to thank you page
          window.location.href = '/thank-you'
        } else {
          throw new Error(result.error || result.message || 'Form submission failed')
        }
      } catch (error) {
        console.error('Submission error:', error)
        errorMessage?.classList.remove('hidden')
        if (errorMessageText) {
          errorMessageText.textContent =
            error instanceof Error ? error.message : 'Something went wrong. Please try again.'
        }

        // Re-enable submit button
        submitButton.disabled = false
        if (submitButtonText) {
          submitButtonText.textContent = 'Submit Request (Email)'
        }

        // Hide error after 5 seconds
        setTimeout(() => {
          errorMessage?.classList.add('hidden')
        }, 5000)
      }
    })
  }

  // WhatsApp button functionality
  if (whatsappButton) {
    whatsappButton.addEventListener('click', () => {
      const form = document.getElementById('contact-form') as HTMLFormElement

      // Validate form before sending to WhatsApp
      if (!form.checkValidity()) {
        form.reportValidity()
        return
      }

      const formData = new FormData(form)

      const name = formData.get('name')
      const mobile = formData.get('mobile')
      const email = formData.get('email')
      const pickupPoint = formData.get('pickupPoint')
      const startingDate = formData.get('startingDate')
      const pickupTime = formData.get('pickupTime')
      const endingDate = formData.get('endingDate')
      const carCategory = formData.get('carCategory')
      const otherCarCategory = formData.get('otherCarCategory')
      const message = formData.get('message')

      const finalCarCategory =
        carCategory === 'other' && otherCarCategory
          ? `Other: ${otherCarCategory}`
          : carCategory

      let whatsappMessage = `Hi, I would like to book a tour:\n\n`
      whatsappMessage += `*Your Details*\n`
      whatsappMessage += `Name: ${name}\n`
      whatsappMessage += `Mobile: ${mobile}\n`
      whatsappMessage += `Email: ${email}\n\n`
      whatsappMessage += `*Tour Details*\n`
      whatsappMessage += `Pickup Point: ${pickupPoint}\n`
      whatsappMessage += `Starting Date: ${startingDate}\n`
      if (pickupTime) whatsappMessage += `Pickup Time/Train: ${pickupTime}\n`
      whatsappMessage += `Ending Date: ${endingDate}\n\n`
      whatsappMessage += `*Car Category*\n`
      whatsappMessage += `${finalCarCategory}\n`
      if (message) whatsappMessage += `\n*Additional Requirements*\n${message}`

      const whatsappUrl = `https://wa.me/917351721351?text=${encodeURIComponent(whatsappMessage)}`
      window.open(whatsappUrl, '_blank')
    })
  }
</script>
