---
import Navbar from '../components/Navbar.astro';
import HeroSlider from '../components/HeroSlider.astro';
import TrustSignals from '../components/TrustSignals.astro';
import PopularRoutes from '../components/PopularRoutes.astro';
import TourPackagesGrid from '../components/TourPackagesGrid.astro';
import SafetySection from '../components/SafetySection.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import CorporateClients from '../components/CorporateClients.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import Footer from '../components/Footer.astro';
import PreviewBanner from '../components/PreviewBanner.astro';
import GlobalHeadScripts from '../components/GlobalHeadScripts.astro';
import GlobalBodyScripts from '../components/GlobalBodyScripts.astro';
import SearchModalContainer from '../components/SearchModalContainer';
import { getSiteSettings, getHomePage, getWhyChooseUs, getCorporateClients, getSafetySection, urlFor } from '../lib/sanity';
import { getAllSearchableContent } from '../lib/searchData';
import '../styles/global.css';

// Pre-render at build time for performance; use /studio for content editing
export const prerender = true;

// Prerendered pages always show published content (no preview mode)
const isPreview = false;

// Fetch data from Sanity (with preview mode if enabled)
const siteSettings = await getSiteSettings();
const homePage = await getHomePage(isPreview);
const whyChooseUsData = await getWhyChooseUs(isPreview);
const corporateClientsData = await getCorporateClients(isPreview);
const safetySectionData = await getSafetySection(isPreview);

// Fallback to defaults if Sanity data is not available
const whatsappNumber = siteSettings?.whatsappNumber || '917351721351';
const whatsappMessage = siteSettings?.whatsappMessage || 'Hi, I would like to book a taxi from Kathgodam.';
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
const phoneNumber = siteSettings?.phone || '7351721351';

// Process homepage data
const pageTitle = homePage?.pageTitle || 'Kathgodam Taxi - Safe & Reliable Taxi Services in Kumaon Hills';
const metaDescription = homePage?.metaDescription || 'Kathgodam Taxi - Your trusted taxi service for Kumaon Hills.';
const keywords = homePage?.keywords || 'Kathgodam taxi, Nainital taxi, Kumaon taxi';

// Transform hero slides - convert Sanity images to URLs
const heroSlides = homePage?.heroSlides?.map((slide: any) => ({
  image: slide.image ? urlFor(slide.image).width(1920).height(1080).auto('format').quality(75).url() : '',
  mobileImage: slide.mobileImage ? urlFor(slide.mobileImage).width(768).height(1024).auto('format').quality(75).url() : (slide.image ? urlFor(slide.image).width(768).height(512).auto('format').quality(75).url() : undefined),
  imageAlt: slide.image?.alt || slide.title,
  title: slide.title,
  subtitle: slide.subtitle,
  description: slide.description,
  ctaText: slide.ctaText,
  ctaLink: slide.ctaLink,
  badgeText: slide.badgeText,
  hasSecondaryCTA: slide.hasSecondaryCTA,
  secondaryCtaText: slide.secondaryCtaText,
  secondaryCtaLink: slide.secondaryCtaLink,
})) || [];

// Transform routes
const routes = homePage?.featuredRoutes?.map((route: any) => ({
  from: route.from,
  to: route.to,
  slug: route.slug,
  distance: route.distance,
  duration: route.duration,
  price: route.startingPrice,
  description: route.introText1?.substring(0, 150) + '...' || '',
  // Use featuredHomepageImage if available, otherwise fallback to first hero slide
  image: route.featuredHomepageImage
    ? urlFor(route.featuredHomepageImage).width(800).height(600).auto('format').quality(75).url()
    : route.heroSlides?.[0]?.image
      ? urlFor(route.heroSlides[0].image).width(800).height(600).auto('format').quality(75).url()
      : '',
})) || [];

// Transform packages
const packages = homePage?.featuredPackages?.map((pkg: any) => ({
  name: pkg.name,
  slug: pkg.slug,
  subtitle: pkg.subtitle || '',
  price: pkg.startingPrice,
  duration: pkg.duration || '',
  // Use featuredHomepageImage if available, otherwise fallback to first hero slide
  image: pkg.featuredHomepageImage
    ? urlFor(pkg.featuredHomepageImage).width(800).height(600).auto('format').quality(75).url()
    : pkg.heroSlides?.[0]?.image
      ? urlFor(pkg.heroSlides[0].image).width(800).height(600).auto('format').quality(75).url()
      : '',
})) || [];

// Transform testimonials
const testimonials = homePage?.testimonials || [];

// CTA section data
const finalCtaHeading = homePage?.finalCtaHeading || 'Ready to Explore the Kumaon Hills?';
const finalCtaSubheading = homePage?.finalCtaSubheading || 'Book your taxi today and experience safe, reliable, and comfortable journeys with Kathgodam Taxi.';
const trustBadges = homePage?.trustBadges || ['15+ Years Experience', 'Fixed Transparent Pricing', '500+ Happy Customers'];

// Fetch searchable content for search modal
const searchData = await getAllSearchableContent();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <GlobalHeadScripts />
    <meta name="description" content={metaDescription} />
    <meta name="keywords" content={keywords} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://kathgodamtaxi.in/" />
    <title>{pageTitle}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kathgodamtaxi.in/" />
    {heroSlides?.[0]?.image && <meta property="og:image" content={heroSlides[0].image} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={metaDescription} />
    {heroSlides?.[0]?.image && <meta name="twitter:image" content={heroSlides[0].image} />}

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://cdn.sanity.io" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" media="print" onload="this.media='all'" />
    {heroSlides?.[0]?.mobileImage && <link rel="preload" as="image" href={heroSlides[0].mobileImage} media="(max-width: 767px)" fetchpriority="high" />}
    {heroSlides?.[0]?.image && <link rel="preload" as="image" href={heroSlides[0].image} media="(min-width: 768px)" fetchpriority="high" />}

    <!-- Structured Data: TaxiService -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "TaxiService",
      "name": "Kathgodam Taxi",
      "description": metaDescription,
      "url": "https://kathgodamtaxi.in",
      "telephone": `+91${phoneNumber}`,
      "areaServed": {
        "@type": "Place",
        "name": "Kumaon Hills, Uttarakhand, India"
      },
      "provider": {
        "@type": "Organization",
        "name": "Kathgodam Taxi",
        "url": "https://kathgodamtaxi.in"
      }
    })} />
  </head>
  <body class="antialiased">
    <GlobalBodyScripts />
    <!-- Preview Banner (shown only in preview mode) -->
    <PreviewBanner show={isPreview} />

    <!-- Navbar -->
    <Navbar />

    <!-- Search Modal (globally available) -->
    <SearchModalContainer searchData={searchData} client:idle />

    <!-- Main Content -->
    <main>
      <!-- Hero Slider -->
      {heroSlides.length > 0 ? (
        <HeroSlider slides={heroSlides} />
      ) : (
        <HeroSlider />
      )}

      <!-- Trust Signals Bar -->
      <TrustSignals />

      <!-- Popular Routes Section -->
      {routes.length > 0 && (
        <PopularRoutes
          routes={routes}
          sectionTitle={homePage?.routesSectionTitle}
          sectionDescription={homePage?.routesSectionDescription}
          bottomCTA={homePage?.routesBottomCTA}
        />
      )}

      <!-- Tour Packages Grid -->
      {packages.length > 0 && (
        <TourPackagesGrid
          packages={packages}
          sectionTitle={homePage?.packagesSectionTitle}
          sectionDescription={homePage?.packagesSectionDescription}
        />
      )}

      <!-- Safety Section -->
      <SafetySection data={safetySectionData} />

      <!-- Why Choose Us Section -->
      <WhyChooseUs data={whyChooseUsData} />

      <!-- Corporate Clients Section -->
      <CorporateClients data={corporateClientsData} />

      <!-- Customer Reviews Section -->
      {testimonials.length > 0 ? (
        <TestimonialsSection
          testimonials={testimonials}
          sectionTitle={homePage?.testimonialsSectionTitle}
          sectionDescription={homePage?.testimonialsSectionDescription}
          footerText={homePage?.testimonialsFooterText}
        />
      ) : (
        <TestimonialsSection />
      )}

      <!-- Final CTA Section -->
      <section class="py-10 bg-gradient-to-r from-secondary-900 via-black to-secondary-900 relative overflow-hidden">
        <!-- Decorative Elements -->
        <div class="absolute inset-0 opacity-10">
          <div class="absolute top-0 left-0 w-64 h-64 bg-primary-500 rounded-full blur-3xl"></div>
          <div class="absolute bottom-0 right-0 w-96 h-96 bg-primary-500 rounded-full blur-3xl"></div>
        </div>

        <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4" set:html={finalCtaHeading.replace('Kumaon Hills', '<span class="text-primary-500">Kumaon Hills</span>')}>
          </h2>
          <p class="text-xl text-gray-300 mb-8">
            {finalCtaSubheading}
          </p>
          <div class="flex flex-col sm:flex-row gap-3 justify-center">
            <a
              href="/contact"
              class="inline-flex items-center justify-center bg-primary-500 text-black px-8 py-3 rounded-lg font-bold hover:bg-primary-400 transition-colors shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all"
            >
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Submit Query
            </a>
            <a
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center bg-white text-black px-8 py-3 rounded-lg font-bold hover:bg-gray-100 transition-colors shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all"
            >
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp
            </a>
            <a
              href={`tel:+91${phoneNumber}`}
              class="inline-flex items-center justify-center bg-secondary-700 text-white px-8 py-3 rounded-lg font-bold hover:bg-secondary-600 transition-colors shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all"
            >
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Call Now
            </a>
          </div>

          <!-- Trust Badges -->
          <div class="mt-12 flex flex-wrap justify-center gap-8 text-sm text-gray-400">
            {trustBadges.map((badge: string) => (
              <div class="flex items-center">
                <svg class="w-5 h-5 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                {badge}
              </div>
            ))}
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Floating WhatsApp Button -->
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-6 right-6 z-50 bg-whatsapp text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg hover:shadow-2xl hover:scale-110 transition-all duration-300 animate-pulse-slow"
      aria-label="Chat on WhatsApp"
    >
      <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
    </a>

    <style>
      /* Smooth scroll behavior */
      html {
        scroll-behavior: smooth;
      }

      /* Add spacing for fixed navbar */
      main {
        margin-top: 64px; /* Height of navbar on mobile */
      }

      @media (min-width: 768px) {
        main {
          margin-top: 80px; /* Height of navbar on desktop */
        }
      }

      /* Custom pulse animation */
      @keyframes pulse-slow {
        0%, 100% {
          transform: scale(1);
          opacity: 1;
        }
        50% {
          transform: scale(1.05);
          opacity: 0.9;
        }
      }

      .animate-pulse-slow {
        animation: pulse-slow 2s ease-in-out infinite;
      }
    </style>
  </body>
</html>
