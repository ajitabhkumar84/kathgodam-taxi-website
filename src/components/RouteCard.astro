---
interface Props {
  from: string;
  to: string;
  distance: string;
  duration: string;
  price: string;
  image: string;
  href?: string;
}

const { from, to, distance, duration, price, image, href = '#' } = Astro.props;

const whatsappNumber = '917351721351';
const whatsappMessage = `Hi, I would like to book a taxi from ${from} to ${to}.`;
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<div class="group bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 border border-gray-200 hover:border-primary-500">
  <!-- Image Section -->
  <div class="relative h-48 overflow-hidden">
    <img
      src={image}
      alt={`${from} to ${to}`}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>

    <!-- Price Badge -->
    <div class="absolute top-4 right-4 bg-primary-500 text-black px-4 py-2 rounded-lg shadow-lg">
      <p class="text-sm font-semibold">Starting from</p>
      <p class="text-2xl font-bold">{price}</p>
    </div>
  </div>

  <!-- Content Section -->
  <div class="p-6">
    <!-- Route Title -->
    <h3 class="text-xl font-bold text-gray-900 mb-3 flex items-center">
      <span>{from}</span>
      <svg class="w-5 h-5 mx-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
      </svg>
      <span>{to}</span>
    </h3>

    <!-- Route Details -->
    <div class="flex items-center gap-4 mb-4 text-sm text-gray-600">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span class="font-medium">{distance}</span>
      </div>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="font-medium">{duration}</span>
      </div>
    </div>

    <!-- Features -->
    <div class="flex items-center gap-2 mb-4 flex-wrap">
      <span class="inline-flex items-center text-xs bg-green-50 text-green-700 px-2 py-1 rounded-full">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        Fixed Price
      </span>
      <span class="inline-flex items-center text-xs bg-blue-50 text-blue-700 px-2 py-1 rounded-full">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        AC Cars
      </span>
      <span class="inline-flex items-center text-xs bg-purple-50 text-purple-700 px-2 py-1 rounded-full">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        Expert Drivers
      </span>
    </div>

    <!-- CTA Buttons -->
    <div class="flex gap-2">
      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex-1 bg-primary-500 text-black text-center px-4 py-2.5 rounded-lg font-semibold hover:bg-primary-600 transition-colors flex items-center justify-center"
      >
        <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Book Now
      </a>
      <a
        href={href}
        class="bg-secondary-900 text-white px-4 py-2.5 rounded-lg font-semibold hover:bg-secondary-800 transition-colors flex items-center justify-center"
      >
        Details
        <svg class="w-4 h-4 ml-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</div>
