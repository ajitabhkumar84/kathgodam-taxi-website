---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import '../styles/global.css';

const pageTitle = 'Kainchi Dham Package from Kathgodam @ ₹4000 | Taxi & Hotel';
const pageDescription = 'Visit all 4 temples associated with Neem Karoli Baba. Complete Kainchi Dham tour package with taxi and hotel options starting at ₹4000. Book now!';
const whatsappNumber = '917351721351';
const baseWhatsappUrl = `https://wa.me/${whatsappNumber}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription}>
    <meta name="keywords" content="kainchi dham package, neem karoli baba, kainchi dham tour, kathgodam to kainchi dham, kainchi dham taxi">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle}>
    <meta property="og:description" content={pageDescription}>
    <meta property="og:type" content="website">
</head>
<body class="antialiased">
    <Navbar />

    <main class="pt-16">
        <!-- Compact Hero Section -->
        <section class="relative bg-gradient-to-br from-primary-500 via-primary-600 to-primary-700 text-white overflow-hidden" style="min-height: 65vh;">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-0 left-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
                <div class="absolute bottom-0 right-0 w-96 h-96 bg-black rounded-full blur-3xl"></div>
            </div>

            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
                <div class="grid lg:grid-cols-2 gap-8 items-center">
                    <div class="space-y-4">
                        <!-- Badge -->
                        <div class="inline-flex items-center gap-2 bg-black/30 backdrop-blur-sm px-3 py-1.5 rounded-full text-sm font-semibold">
                            <svg class="w-4 h-4 text-primary-300" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/>
                            </svg>
                            Sacred Pilgrimage Tour
                        </div>

                        <!-- Headline -->
                        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight">
                            Kainchi Dham
                            <span class="text-secondary-900 block">Tour Package</span>
                        </h1>

                        <!-- Hindi Title -->
                        <p class="text-xl md:text-2xl font-semibold text-primary-200">
                            नीम करोली बाबा से जुड़े 4 मंदिरों का पूरा दौरा
                        </p>

                        <!-- Subheadline -->
                        <p class="text-base md:text-lg text-white/90 leading-relaxed">
                            Experience divine blessings at all 4 sacred temples associated with Neem Karoli Baba. Complete day tour from Kathgodam with professional drivers and comfortable vehicles.
                        </p>

                        <!-- Price Badge -->
                        <div class="inline-flex items-center gap-2 bg-secondary-900 px-4 py-2 rounded-lg">
                            <span class="text-sm text-white/80">Starting from</span>
                            <span class="text-2xl md:text-3xl font-bold text-primary-400">₹4,000</span>
                        </div>

                        <!-- CTA Buttons -->
                        <div class="flex flex-wrap gap-3 pt-2">
                            <a href="#pricing" class="inline-flex items-center gap-2 bg-secondary-900 text-primary-500 px-6 py-3 rounded-lg font-bold hover:bg-secondary-800 transition-all shadow-xl hover:shadow-2xl hover:scale-105">
                                <span>View Packages</span>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </a>
                            <a href={`${baseWhatsappUrl}?text=${encodeURIComponent('Hi, I want to book Kainchi Dham tour package')}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-[#25d366] text-white px-6 py-3 rounded-lg font-bold hover:bg-[#1fb855] transition-all shadow-xl hover:shadow-2xl hover:scale-105">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                                </svg>
                                <span>Book Now</span>
                            </a>
                        </div>
                    </div>

                    <!-- Hero Image -->
                    <div class="hidden lg:block">
                        <div class="relative">
                            <img
                                src="https://images.unsplash.com/photo-1582510003544-4d00b7f74220?w=700&h=450&fit=crop"
                                alt="Kainchi Dham Temple"
                                class="relative rounded-2xl shadow-2xl w-full object-cover h-[400px]"
                            />
                            <div class="absolute -bottom-4 -right-4 bg-white text-secondary-900 px-6 py-3 rounded-xl shadow-2xl">
                                <div class="text-sm font-semibold">Full Day Tour</div>
                                <div class="text-xs text-gray-600">All 4 Sacred Temples</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- About the Tour -->
        <section class="py-16 lg:py-20 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                        About <span class="text-primary-600">Kainchi Dham Tour</span>
                    </h2>
                    <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                        A spiritual journey covering all four sacred temples blessed by Neem Karoli Baba
                    </p>
                </div>

                <div class="grid md:grid-cols-2 gap-8 items-center">
                    <div class="space-y-4">
                        <p class="text-gray-700 leading-relaxed">
                            Kainchi Dham, located in the Kumaon hills near Nainital, is a sacred pilgrimage site associated with the revered saint <strong>Neem Karoli Baba (Neeb Karori Baba)</strong>. This complete tour package takes you to all four temples connected to Maharaj Ji, offering a deeply spiritual experience.
                        </p>
                        <p class="text-gray-700 leading-relaxed">
                            The ashram, nestled between two mountains with the Kosi River flowing through, creates a divine atmosphere perfect for meditation and seeking blessings. Devotees from around the world, including notable personalities like Steve Jobs and Mark Zuckerberg, have visited this sacred place.
                        </p>
                        <div class="grid grid-cols-2 gap-4 pt-4">
                            <div class="bg-primary-50 p-4 rounded-lg border border-primary-200">
                                <div class="text-2xl font-bold text-primary-600">4</div>
                                <div class="text-sm text-gray-700">Sacred Temples</div>
                            </div>
                            <div class="bg-primary-50 p-4 rounded-lg border border-primary-200">
                                <div class="text-2xl font-bold text-primary-600">1 Day</div>
                                <div class="text-sm text-gray-700">Complete Tour</div>
                            </div>
                            <div class="bg-primary-50 p-4 rounded-lg border border-primary-200">
                                <div class="text-2xl font-bold text-primary-600">38 km</div>
                                <div class="text-sm text-gray-700">From Kathgodam</div>
                            </div>
                            <div class="bg-primary-50 p-4 rounded-lg border border-primary-200">
                                <div class="text-2xl font-bold text-primary-600">1400m</div>
                                <div class="text-sm text-gray-700">Altitude</div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gradient-to-br from-primary-50 to-white p-8 rounded-2xl border-2 border-primary-200 shadow-lg">
                        <h3 class="text-2xl font-bold text-gray-900 mb-4">The 4 Sacred Temples</h3>
                        <ul class="space-y-3">
                            <li class="flex items-start gap-3">
                                <div class="mt-1 flex-shrink-0">
                                    <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">Kainchi Dham Hanuman Mandir</div>
                                    <div class="text-sm text-gray-600">Main temple with the sacred ashram</div>
                                </div>
                            </li>
                            <li class="flex items-start gap-3">
                                <div class="mt-1 flex-shrink-0">
                                    <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">Kakrighat Temple</div>
                                    <div class="text-sm text-gray-600">Serene temple by the riverside</div>
                                </div>
                            </li>
                            <li class="flex items-start gap-3">
                                <div class="mt-1 flex-shrink-0">
                                    <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">Bhumiadhar Temple</div>
                                    <div class="text-sm text-gray-600">Historic temple with divine energy</div>
                                </div>
                            </li>
                            <li class="flex items-start gap-3">
                                <div class="mt-1 flex-shrink-0">
                                    <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">Vrindavan Temple (Nainital)</div>
                                    <div class="text-sm text-gray-600">Additional blessing point</div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- 4 Sacred Temples Visual Section -->
        <section class="py-16 lg:py-20 bg-gradient-to-br from-orange-50 via-primary-50 to-orange-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                        The 4 <span class="text-primary-600">Sacred Temples</span>
                    </h2>
                    <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                        Complete darshan of all temples blessed by Neem Karoli Baba
                    </p>
                </div>

                <div class="space-y-8">
                    <!-- Temple 1: Bhumiadhar Ashram & Hanuman Mandir -->
                    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-2 border-primary-200 hover:border-primary-400 transition-all">
                        <div class="grid lg:grid-cols-2 gap-0">
                            <!-- Image Side -->
                            <div class="relative h-64 lg:h-auto bg-gradient-to-br from-primary-100 to-orange-100">
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <img
                                        src="https://images.unsplash.com/photo-1609920658906-8223bd289001?w=600&h=400&fit=crop"
                                        alt="Bhumiadhar Temple"
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                            </div>
                            <!-- Content Side -->
                            <div class="p-8 bg-gradient-to-br from-orange-50 to-white">
                                <div class="flex items-start gap-4">
                                    <div class="flex-shrink-0">
                                        <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-orange-500 rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg">
                                            1
                                        </div>
                                    </div>
                                    <div class="flex-1">
                                        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">
                                            Bhumiadhar Ashram & Hanuman Mandir
                                        </h3>
                                        <p class="text-gray-700 mb-4 leading-relaxed">
                                            Maharajji's Bhumiadhar Ashram is a small ashram located at 35 KM from Kathgodam station. It was inaugurated in 1967, and Maharajji frequently stayed there. It has a statue of Maharaj Ji and a beautiful murti of Hanuman Ji.
                                        </p>
                                        <div class="flex items-center gap-2 text-sm text-primary-700 bg-primary-50 px-4 py-2 rounded-lg inline-block">
                                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                            </svg>
                                            <span class="font-semibold">Route:</span> Kathgodam → Jeolikote → Getia → Bhumiadhar
                                        </div>
                                        <div class="mt-2 text-sm text-gray-600 font-semibold">
                                            ⏱ Total Time: 1 Hour from Kathgodam
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Temple 2: Kainchi Dham -->
                    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-2 border-primary-300 hover:border-primary-500 transition-all relative">
                        <!-- Popular Badge -->
                        <div class="absolute top-4 right-4 z-10 bg-gradient-to-r from-primary-600 to-orange-600 text-white px-6 py-2 rounded-full text-sm font-bold shadow-xl">
                            ⭐ MOST POPULAR
                        </div>
                        <div class="grid lg:grid-cols-2 gap-0">
                            <!-- Content Side (Reversed Order) -->
                            <div class="p-8 bg-gradient-to-br from-primary-50 to-orange-50 order-2 lg:order-1">
                                <div class="flex items-start gap-4">
                                    <div class="flex-shrink-0">
                                        <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-primary-600 rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg">
                                            2
                                        </div>
                                    </div>
                                    <div class="flex-1">
                                        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">
                                            Kainchi Dham
                                        </h3>
                                        <p class="text-gray-700 mb-4 leading-relaxed">
                                            The first temple built in 1964 and located at 42 KM from Kathgodam station. It was here Maharaj Ji spent most of his time and is the most popular one. Nestled between two mountains with the Kosi River flowing through, creating divine energy.
                                        </p>
                                        <div class="flex items-center gap-2 text-sm text-primary-700 bg-primary-100 px-4 py-2 rounded-lg inline-block border border-primary-300">
                                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                            </svg>
                                            <span class="font-semibold">Route:</span> Kathgodam → Bhimtal → Bowali→ Kainchi Dham
                                        </div>
                                        <div class="mt-2 text-sm text-gray-600 font-semibold">
                                            ⏱ Total Time: 1.30 Hour from Kathgodam
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Image Side -->
                            <div class="relative h-64 lg:h-auto bg-gradient-to-br from-orange-100 to-primary-100 order-1 lg:order-2">
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <img
                                        src="https://images.unsplash.com/photo-1582510003544-4d00b7f74220?w=600&h=400&fit=crop"
                                        alt="Kainchi Dham Temple"
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Temple 3: Kakrighat Temple -->
                    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-2 border-primary-200 hover:border-primary-400 transition-all">
                        <div class="grid lg:grid-cols-2 gap-0">
                            <!-- Image Side -->
                            <div class="relative h-64 lg:h-auto bg-gradient-to-br from-primary-100 to-orange-100">
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <img
                                        src="https://images.unsplash.com/photo-1605649487212-47bdab064df7?w=600&h=400&fit=crop"
                                        alt="Kakrighat Temple"
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                            </div>
                            <!-- Content Side -->
                            <div class="p-8 bg-gradient-to-br from-orange-50 to-white">
                                <div class="flex items-start gap-4">
                                    <div class="flex-shrink-0">
                                        <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-orange-500 rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg">
                                            3
                                        </div>
                                    </div>
                                    <div class="flex-1">
                                        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">
                                            Kakrighat Temple
                                        </h3>
                                        <p class="text-gray-700 mb-4 leading-relaxed">
                                            Here at Kakrighat, in 1890, during his travel to the Himalayas, Swami Vivekananda sat for meditation under a Pipal tree. Here he experienced the oneness of the universe, of the microcosm and macrocosm, and realized that in the microcosm of the body exist everything that is there in the entire universe. Neem Karoli Baba, also stayed and meditated here and now is managed by Kainchi Dham Ashram.
                                        </p>
                                        <div class="flex items-center gap-2 text-sm text-primary-700 bg-primary-50 px-4 py-2 rounded-lg inline-block">
                                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                            </svg>
                                            <span class="font-semibold">Route:</span> Kainchi Dham → 20 KM towards Almora
                                        </div>
                                        <div class="mt-2 text-sm text-gray-600 font-semibold">
                                            ⏱ Total Time: 40 mins from Kainchi Dham
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Temple 4: Hanuman Garhi -->
                    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-2 border-primary-200 hover:border-primary-400 transition-all">
                        <div class="grid lg:grid-cols-2 gap-0">
                            <!-- Content Side (Reversed Order) -->
                            <div class="p-8 bg-gradient-to-br from-primary-50 to-orange-50 order-2 lg:order-1">
                                <div class="flex items-start gap-4">
                                    <div class="flex-shrink-0">
                                        <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-primary-600 rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg">
                                            4
                                        </div>
                                    </div>
                                    <div class="flex-1">
                                        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">
                                            Hanuman Garhi
                                        </h3>
                                        <p class="text-gray-700 mb-4 leading-relaxed">
                                            Inaugurated in 1951, this is reportedly the first temple established by Maharaj ji. Daily Morning and Evening Aarti are there and on Tuesday evenings Sundarkand Paath is done. A huge murti of Hanuman Ji is there. Shri Ramnavmi and Guru-Purnima are the main festivals celebrated here.
                                        </p>
                                        <div class="flex items-center gap-2 text-sm text-primary-700 bg-primary-50 px-4 py-2 rounded-lg inline-block">
                                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                            </svg>
                                            <span class="font-semibold">Route:</span> 2 KM from Nainital
                                        </div>
                                        <div class="mt-2 text-sm text-gray-600 font-semibold">
                                            ⏱ Total Time: 10 mins from Nainital or 40 mins from Kainchi Dham
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Image Side -->
                            <div class="relative h-64 lg:h-auto bg-gradient-to-br from-orange-100 to-primary-100 order-1 lg:order-2">
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <img
                                        src="https://images.unsplash.com/photo-1607873039614-e64767ec1bad?w=600&h=400&fit=crop"
                                        alt="Hanuman Garhi Temple"
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Summary Card -->
                <div class="mt-12 bg-gradient-to-br from-primary-600 to-orange-600 rounded-2xl shadow-2xl p-8 text-white text-center">
                    <h3 class="text-2xl md:text-3xl font-bold mb-4">Complete Spiritual Circuit</h3>
                    <p class="text-lg text-white/90 mb-6">
                        Our package covers all 4 sacred temples in one organized tour, ensuring you receive complete blessings from Neem Karoli Baba
