---
interface CarType {
  name: string;
  model: string;
  capacity: string;
  seasonPrice: string;
  offSeasonPrice: string;
  image: string;
  features: string[];
  popular?: boolean;
}

interface Props {
  carTypes: CarType[];
  exclusions?: string[];
}

const { carTypes, exclusions } = Astro.props;
---

<section class="py-12 bg-gradient-to-br from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">
        Transparent Pricing
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Choose from our fleet of well-maintained vehicles with transparent, fixed pricing.
      </p>
    </div>

    <!-- Pricing Cards Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      {carTypes.map((car) => (
        <div class={`relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden ${car.popular ? 'ring-4 ring-primary-500 transform scale-105' : ''}`}>
          {car.popular && (
            <div class="absolute top-0 right-0 bg-primary-500 text-black text-xs font-bold px-4 py-1 rounded-bl-lg">
              POPULAR
            </div>
          )}

          <!-- Car Image -->
          <div class="relative h-40 bg-gradient-to-br from-gray-100 to-gray-200 overflow-hidden">
            <img
              src={car.image}
              alt={car.name}
              class="w-full h-full object-contain p-4"
            />
          </div>

          <!-- Card Content -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-1">{car.name}</h3>
            <p class="text-sm text-gray-500 mb-1">{car.model}</p>
            <p class="text-sm text-gray-600 mb-4 flex items-center">
              <svg class="w-4 h-4 mr-1 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
              </svg>
              {car.capacity}
            </p>

            <!-- Pricing -->
            <div class="mb-4 p-4 bg-gray-50 rounded-lg">
              <div class="mb-3">
                <p class="text-xs text-gray-500 mb-1">Season Rate</p>
                <p class="text-2xl font-bold text-gray-900">{car.seasonPrice}</p>
                <p class="text-xs text-gray-500 mt-1">Apr-Jul, Sept-Oct, Dec-Jan</p>
              </div>
              <div class="border-t border-gray-200 pt-3">
                <p class="text-xs text-gray-500 mb-1">Off-Season Rate</p>
                <p class="text-xl font-bold text-primary-600">{car.offSeasonPrice}</p>
                <p class="text-xs text-gray-500 mt-1">Other months</p>
              </div>
            </div>

            <!-- Features -->
            <ul class="space-y-2 mb-6">
              {car.features.map((feature) => (
                <li class="flex items-start text-sm text-gray-600">
                  <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>

          </div>
        </div>
      ))}
    </div>

    <!-- Important Notes -->
    <div class="bg-amber-50 border-l-4 border-amber-500 p-6 rounded-r-lg">
      <div class="flex">
        <svg class="w-6 h-6 text-amber-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <div class="text-sm text-gray-700">
          <p class="font-semibold text-gray-900 mb-2">What's Excluded:</p>
          <ul class="list-disc list-inside space-y-1">
            {(exclusions && exclusions.length > 0 ? exclusions : [
              'Toll and Car parking charges',
              'Non-AC Car. AC would not work in hills.',
              'No waiting for pickup and drop for journey less than 2 hours.'
            ]).map((exclusion) => (
              <li>{exclusion}</li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
