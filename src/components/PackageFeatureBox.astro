---
import type { FeatureBox } from '../types/package';

interface Props {
  featureBox?: FeatureBox;
}

const { featureBox } = Astro.props;

if (!featureBox?.enabled) {
  return null;
}
---

{featureBox.enabled && (
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-r from-orange-500 to-orange-600 rounded-3xl p-8 md:p-12 shadow-2xl text-white">
        <!-- Title -->
        {featureBox.title && (
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
            {featureBox.title}
          </h2>
        )}

        <!-- Description -->
        {featureBox.description && (
          <p class="text-center text-white/95 text-lg mb-8 max-w-4xl mx-auto">
            {featureBox.description}
          </p>
        )}

        <!-- Stats Grid -->
        {featureBox.stats && Array.isArray(featureBox.stats) && featureBox.stats.length > 0 && (
          <div class={`grid gap-6 ${
            featureBox.stats.length === 1 ? 'grid-cols-1 max-w-sm mx-auto' :
            featureBox.stats.length === 2 ? 'grid-cols-1 md:grid-cols-2 max-w-2xl mx-auto' :
            featureBox.stats.length === 3 ? 'grid-cols-1 md:grid-cols-3 max-w-4xl mx-auto' :
            'grid-cols-1 md:grid-cols-2 lg:grid-cols-4'
          }`}>
            {featureBox.stats.filter((stat) => stat !== null && stat !== undefined).map((stat) => (
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center border-2 border-white/20 hover:bg-white/15 transition-all">
                <div class="text-4xl md:text-5xl font-bold mb-2">
                  {stat.value}
                </div>
                <div class="text-lg md:text-xl font-medium text-white/90">
                  {stat.label}
                </div>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  </section>
)}
